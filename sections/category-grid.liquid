{% comment %}
  Category Grid Section
  - 3x2 responsive grid layout (6 boxes)
  - Each cell has an image, title overlay, and links to a category
  - Fully responsive with different layouts for mobile, tablet, and desktop
{% endcomment %}

<div class="category-grid-section section-{{ section.id }}" id="CategoryGrid-{{ section.id }}">
  <div class="section-header">
    {% if section.settings.title != blank %}
      <h2 class="section-title">{{ section.settings.title | escape }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <div class="section-subtitle">{{ section.settings.subtitle }}</div>
    {% endif %}
  </div>

  <div class="category-grid">
    {% for block in section.blocks %}
      {% if block.settings.image != blank and block.settings.title != blank %}
        <div class="category-item-wrapper" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link | default: '#' }}" class="category-item">
            <div class="category-image-container">
              {{
                block.settings.image
                | image_url: width: 800
                | image_tag:
                  loading: 'lazy',
                  class: 'category-image',
                  sizes: '(min-width: 990px) 33vw, (min-width: 750px) 50vw, 100vw',
                  widths: '400, 600, 800, 1000',
                  alt: block.settings.title
                | escape
              }}
              <div class="category-overlay">
                <h3 class="category-title">{{ block.settings.title | escape }}</h3>
                {% if block.settings.subtitle != blank %}
                  <div class="category-subtitle">{{ block.settings.subtitle }}</div>
                {% endif %}
              </div>
            </div>
          </a>
        </div>
      {% else %}
        <div class="category-item-wrapper placeholder" {{ block.shopify_attributes }}>
          <div class="category-placeholder">
            {% if block.settings.title != blank %}
              <h3 class="category-title">{{ block.settings.title | escape }}</h3>
            {% else %}
              <h3 class="category-title">Category Title</h3>
            {% endif %}
            <div class="placeholder-text">Please add an image</div>
          </div>
        </div>
      {% endif %}
    {% endfor %}

    {% if section.blocks.size == 0 %}
      <div class="placeholder-container">
        <div class="placeholder-message">
          <p>Add category blocks to create a grid of categories with images.</p>
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% style %}
  .category-grid-section {
    margin: 30px 0;
    padding: 0 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .section-title {
    margin: 0 0 10px;
    font-size: 28px;
  }

  .section-subtitle {
    font-size: 16px;
    opacity: 0.85;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }

  .category-item-wrapper {
    position: relative;
    aspect-ratio: {{ section.settings.aspect_ratio }};
    overflow: hidden;
  }

  .category-item {
    display: block;
    height: 100%;
    width: 100%;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  {% if section.settings.hover_effect %}
  .category-item:hover .category-image {
    transform: scale(1.05);
  }

  .category-item:hover .category-overlay {
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity | plus: 0.1 }});
  }
  {% endif %}

  .category-image-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .category-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .category-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: {{ section.settings.text_position }};
    align-items: center;
    padding: 20px;
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity }});
    transition: background-color 0.3s ease;
    text-align: center;
  }

  .category-title {
    color: {{ section.settings.title_color }};
    margin: 0;
    font-size: 20px;
    font-weight: 600;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }

  .category-subtitle {
    color: {{ section.settings.title_color }};
    margin-top: 5px;
    font-size: 14px;
  }

  .category-placeholder,
  .placeholder-container {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #f6f6f6;
    padding: 20px;
    text-align: center;
  }

  .placeholder-text,
  .placeholder-message {
    color: #777;
    margin-top: 10px;
  }

  /* Responsive styles */
  @media screen and (max-width: 989px) {
    .category-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .section-title {
      font-size: 24px;
    }

    .category-title {
      font-size: 18px;
    }
  }

  @media screen and (max-width: 749px) {
    .category-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 22px;
    }

    .category-grid-section {
      margin: 20px 0;
      padding: 0 15px;
    }

    .category-item-wrapper {
      aspect-ratio: 1/{{ section.settings.mobile_aspect_ratio }};
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Category Grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 800,
      "max": 1600,
      "step": 50,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 40,
      "step": 5,
      "unit": "px",
      "label": "Grid Gap",
      "default": 20
    },
    {
      "type": "range",
      "id": "aspect_ratio",
      "min": 0.5,
      "max": 2.0,
      "step": 0.1,
      "label": "Image Aspect Ratio",
      "default": 1.0,
      "info": "Width to height ratio. 1.0 is square, 0.8 is portrait, 1.2 is landscape."
    },
    {
      "type": "range",
      "id": "mobile_aspect_ratio",
      "min": 0.5,
      "max": 1.5,
      "step": 0.1,
      "label": "Mobile Image Aspect Ratio",
      "default": 0.8,
      "info": "For smaller screens"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0.0,
      "max": 0.9,
      "step": 0.1,
      "label": "Overlay Opacity",
      "default": 0.4
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text Position",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Middle"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "hover_effect",
      "label": "Enable Hover Effect",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category Name"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Category Subtitle"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Grid",
      "category": "Image",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}
