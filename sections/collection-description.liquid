{% liquid
  assign heading_size = section.settings.heading_size | times: settings.heading_base_size | times: 0.000225
%}
{% style %}
  .bg--{{ section.id }} {
    {% if section.settings.background_color_light.alpha != 0.0 %}
      background: {{ section.settings.background_color_light }};
    {% else %}
      background: rgb(var(--colors-background-secondary));
    {% endif %}
    {% unless section.settings.text_color_light.alpha == 0.0 %}
      --colors-text: {{ section.settings.text_color_light.red }},{{ section.settings.text_color_light.green }},{{ section.settings.text_color_light.blue }};
    {% endunless %}
  }
  .dark .bg--{{ section.id }} {
    {% if section.settings.background_color_dark.alpha != 0.0 %}
      background: {{ section.settings.background_color_dark }};
    {% else %}
      background: rgb(var(--colors-background-secondary));
    {% endif %}
    {%- unless section.settings.text_color_dark.alpha == 0.0 -%}
      --colors-text: {{ section.settings.text_color_dark.red }},{{ section.settings.text_color_dark.green }},{{ section.settings.text_color_dark.blue }};
    {% else %}  
      --colors-text: var(--colors-text-secondary);
    {% endunless %}
  }
  .heading-{{ section.id }} {
    font-size: {{ heading_size | times: 0.6 }}rem; 
  }
  
  {% if section.settings.heading_light.alpha != 0.0 %}
    .bg--{{ section.id }} {
      --colors-heading: {{ section.settings.heading_light.red }},{{ section.settings.heading_light.green }},{{ section.settings.heading_light.blue }};
    }
  {% endif %}
  .dark .bg--{{ section.id }} {
    {% if section.settings.heading_dark.alpha != 0.0 %}
      --colors-heading: {{ section.settings.heading_dark.red }},{{ section.settings.heading_dark.green }},{{ section.settings.heading_dark.blue }};
    {% else %}        
      --colors-heading: var(--colors-heading-secondary);
    {% endif %}
  }
  .content--{{ section.id }} {
    font-size: {{ section.settings.text_size }}%;
  }
  .content--{{ section.id }}.rte p {
    line-height: {{ section.settings.line_spacing | times: 0.01 }};
  }
  @media (min-width: 768px) {
    .heading-{{ section.id }} {
      font-size: {{ heading_size }}rem; 
    }
    .content--{{ section.id }} {
      width: {{ section.settings.width_content }}%;
    }
  }
{% endstyle %}
{% render 'section-divider' %}

<div class="collection-description bg--{{ section.id }} mx-auto pt-[{{ section.settings.padding_top_mobile }}px] md:pt-[{{ section.settings.padding_top }}px] pb-[{{ section.settings.padding_bottom_mobile }}px] md:pb-[{{ section.settings.padding_bottom }}px]">
  <div class="{% if section.settings.full_width %} full-width{% else %} x-pgw page-width{% endif %}">
    {% if section.settings.heading != blank %}
      {% render 'heading-highlight',
        headingId: section.id,
        heading: section.settings.heading,
        highlight_type: section.settings.highlight_type,
        color_heading_highlight_dark: section.settings.color_heading_highlight_dark,
        color_heading_highlight_light: section.settings.color_heading_highlight_light,
        class: 'h2 mb-6 md:mb-8 block',
        heading_tag: section.settings.heading_tag,
        heading_alignment: section.settings.heading_alignment
      %}
    {% endif %}
    <div class="content--{{ section.id }} anm-fade-paragraph mx-auto text-[rgb(var(--colors-text))] p-break-words">
      <div class="rte anm-fade-element {{ section.settings.mobile_content_alignment }} md:{{ section.settings.desktop_content_alignment }}" x-intersect.once="$el.classList.add('is-visible')">
        {%- render 'truncate-text', 
          number_of_lines_shown: section.settings.number_of_lines_shown 
          blockID: section.id,
          content: collection.description,
          read_more_label: section.settings.read_more_label,
          see_less_label: section.settings.see_less_label,
          text_alignment_mobile: section.settings.mobile_content_alignment,
          text_alignment: section.settings.desktop_content_alignment,
          gradient_style: 'secondary'
        -%}
      </div>
    </div>
  </div>
</div>
