{% comment %}
  Responsive Image Slider Section
  - Displays up to 3 images in a sliding carousel
  - Automatically transitions between slides
  - Uses modern Shopify image handling
  - Supports separate images for mobile and desktop
{% endcomment %}

<div class="image-slider-section" id="ImageSlider-{{ section.id }}">
  <div class="slider-container">
    {% if section.settings.image_1 != blank or section.settings.image_2 != blank or section.settings.image_3 != blank %}
      <div class="slides-wrapper">
        {% if section.settings.image_1 != blank %}
          <div class="slide slide-1 {% if forloop.first %}active{% endif %}">
            <!-- Desktop Image -->
            <div class="slide-image desktop-image">
              {{
                section.settings.image_1
                | image_url: width: 2000
                | image_tag:
                  loading: 'lazy',
                  class: 'slideshow-image',
                  sizes: '(min-width: 750px) calc(100vw - 22rem), 1100px',
                  widths: '550, 720, 990, 1100, 1500, 2000',
                  alt: section.settings.image_1.alt
                | escape
              }}
            </div>

            <!-- Mobile Image (if provided) -->
            <div class="slide-image mobile-image">
              {% if section.settings.mobile_image_1 != blank %}
                {{
                  section.settings.mobile_image_1
                  | image_url: width: 1000
                  | image_tag:
                    loading: 'lazy',
                    class: 'slideshow-image',
                    sizes: '100vw',
                    widths: '375, 550, 750, 1000',
                    alt: section.settings.mobile_image_1.alt
                  | escape
                }}
              {% else %}
                <!-- Fallback to desktop image if no mobile image is provided -->
                {{
                  section.settings.image_1
                  | image_url: width: 1000
                  | image_tag:
                    loading: 'lazy',
                    class: 'slideshow-image',
                    sizes: '100vw',
                    widths: '375, 550, 750, 1000',
                    alt: section.settings.image_1.alt
                  | escape
                }}
              {% endif %}
            </div>

            {% if section.settings.caption_1 != blank %}
              <div class="slide-caption">
                <p>{{ section.settings.caption_1 }}</p>
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.image_2 != blank %}
          <div class="slide slide-2">
            <!-- Desktop Image -->
            <div class="slide-image desktop-image">
              {{
                section.settings.image_2
                | image_url: width: 2000
                | image_tag:
                  loading: 'lazy',
                  class: 'slideshow-image',
                  sizes: '(min-width: 750px) calc(100vw - 22rem), 1100px',
                  widths: '550, 720, 990, 1100, 1500, 2000',
                  alt: section.settings.image_2.alt
                | escape
              }}
            </div>

            <!-- Mobile Image (if provided) -->
            <div class="slide-image mobile-image">
              {% if section.settings.mobile_image_2 != blank %}
                {{
                  section.settings.mobile_image_2
                  | image_url: width: 1000
                  | image_tag:
                    loading: 'lazy',
                    class: 'slideshow-image',
                    sizes: '100vw',
                    widths: '375, 550, 750, 1000',
                    alt: section.settings.mobile_image_2.alt
                  | escape
                }}
              {% else %}
                <!-- Fallback to desktop image if no mobile image is provided -->
                {{
                  section.settings.image_2
                  | image_url: width: 1000
                  | image_tag:
                    loading: 'lazy',
                    class: 'slideshow-image',
                    sizes: '100vw',
                    widths: '375, 550, 750, 1000',
                    alt: section.settings.image_2.alt
                  | escape
                }}
              {% endif %}
            </div>

            {% if section.settings.caption_2 != blank %}
              <div class="slide-caption">
                <p>{{ section.settings.caption_2 }}</p>
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.image_3 != blank %}
          <div class="slide slide-3">
            <!-- Desktop Image -->
            <div class="slide-image desktop-image">
              {{
                section.settings.image_3
                | image_url: width: 2000
                | image_tag:
                  loading: 'lazy',
                  class: 'slideshow-image',
                  sizes: '(min-width: 750px) calc(100vw - 22rem), 1100px',
                  widths: '550, 720, 990, 1100, 1500, 2000',
                  alt: section.settings.image_3.alt
                | escape
              }}
            </div>

            <!-- Mobile Image (if provided) -->
            <div class="slide-image mobile-image">
              {% if section.settings.mobile_image_3 != blank %}
                {{
                  section.settings.mobile_image_3
                  | image_url: width: 1000
                  | image_tag:
                    loading: 'lazy',
                    class: 'slideshow-image',
                    sizes: '100vw',
                    widths: '375, 550, 750, 1000',
                    alt: section.settings.mobile_image_3.alt
                  | escape
                }}
              {% else %}
                <!-- Fallback to desktop image if no mobile image is provided -->
                {{
                  section.settings.image_3
                  | image_url: width: 1000
                  | image_tag:
                    loading: 'lazy',
                    class: 'slideshow-image',
                    sizes: '100vw',
                    widths: '375, 550, 750, 1000',
                    alt: section.settings.image_3.alt
                  | escape
                }}
              {% endif %}
            </div>

            {% if section.settings.caption_3 != blank %}
              <div class="slide-caption">
                <p>{{ section.settings.caption_3 }}</p>
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>

      {% if section.settings.show_dots %}
        <div class="slider-navigation">
          {% if section.settings.image_1 != blank %}
            <button class="dot active" data-index="0" aria-label="{{ 'sections.slideshow.slide' | t }} 1"></button>
          {% endif %}
          {% if section.settings.image_2 != blank %}
            <button class="dot" data-index="1" aria-label="{{ 'sections.slideshow.slide' | t }} 2"></button>
          {% endif %}
          {% if section.settings.image_3 != blank %}
            <button class="dot" data-index="2" aria-label="{{ 'sections.slideshow.slide' | t }} 3"></button>
          {% endif %}
        </div>
      {% endif %}

      {% if section.settings.show_arrows %}
        <button class="slider-arrow prev" aria-label="{{ 'sections.slideshow.previous_slide' | t }}">
          <span>&#10094;</span>
        </button>
        <button class="slider-arrow next" aria-label="{{ 'sections.slideshow.next_slide' | t }}">
          <span>&#10095;</span>
        </button>
      {% endif %}
    {% else %}
      <div class="placeholder-container">
        <div class="placeholder-content">
          <p>{{ 'sections.image_slider.upload_image' | t | default: 'Please upload at least one image' }}</p>
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% style %}
  .image-slider-section {
    width: 100%;
    position: relative;
    overflow: hidden;
    margin-bottom: 30px;
  }

  .slider-container {
    position: relative;
    width: 100%;
    max-width: {{ section.settings.slider_width }}px;
    margin: 0 auto;
    height: 0;
    padding-bottom: {{ section.settings.aspect_ratio }}%;
    overflow: hidden;
  }

  .slides-wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    z-index: 1;
  }

  .slide.active {
    opacity: 1;
    z-index: 2;
  }

  .slide-image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  /* Show/hide based on screen size */
  .desktop-image {
    display: block;
  }

  .mobile-image {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .desktop-image {
      display: none;
    }

    .mobile-image {
      display: block;
    }
  }

  .slideshow-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .slide-caption {
    position: absolute;
    bottom: 20px;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    padding: 10px 20px;
    text-align: center;
    z-index: 3;
  }

  .slider-navigation {
    position: absolute;
    bottom: 15px;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    z-index: 3;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    margin: 0 5px;
    padding: 0;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .dot.active {
    background-color: white;
  }

  .slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(0, 0, 0, 0.3);
    color: white;
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 3;
    transition: background-color 0.3s ease;
  }

  .slider-arrow:hover {
    background-color: rgba(0, 0, 0, 0.6);
  }

  .slider-arrow.prev {
    left: 15px;
  }

  .slider-arrow.next {
    right: 15px;
  }

  .placeholder-container {
    width: 100%;
    height: 100%;
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f6f6f6;
  }

  .placeholder-content {
    padding: 20px;
    text-align: center;
  }

  @media screen and (max-width: 767px) {
    .slider-arrow {
      width: 30px;
      height: 30px;
    }

    .slide-caption {
      padding: 5px 10px;
      font-size: 14px;
    }

    .dot {
      width: 8px;
      height: 8px;
    }
  }
{% endstyle %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sliderId = 'ImageSlider-{{ section.id }}';
    const slider = document.getElementById(sliderId);
    if (!slider) return;

    const slides = slider.querySelectorAll('.slide');
    const dots = slider.querySelectorAll('.dot');
    const prevBtn = slider.querySelector('.slider-arrow.prev');
    const nextBtn = slider.querySelector('.slider-arrow.next');

    if (slides.length === 0) return;

    let currentSlide = 0;
    let slideInterval;
    const slideDuration = {{ section.settings.slide_duration | times: 1000 }};

    // Initialize the first slide
    slides[0].classList.add('active');

    function goToSlide(n) {
      slides[currentSlide].classList.remove('active');
      if (dots.length > 0) {
        dots[currentSlide].classList.remove('active');
      }

      currentSlide = (n + slides.length) % slides.length;

      slides[currentSlide].classList.add('active');
      if (dots.length > 0) {
        dots[currentSlide].classList.add('active');
      }
    }

    function nextSlide() {
      goToSlide(currentSlide + 1);
    }

    function prevSlide() {
      goToSlide(currentSlide - 1);
    }

    // Auto-slide functionality
    function startSlideshow() {
      // Clear any existing interval
      if (slideInterval) {
        clearInterval(slideInterval);
      }

      // Only start if there's more than one slide
      if (slides.length > 1) {
        slideInterval = setInterval(nextSlide, slideDuration);
      }
    }

    // Initialize auto-slide
    startSlideshow();

    // Event Listeners
    if (prevBtn) {
      prevBtn.addEventListener('click', function() {
        prevSlide();
        // Reset interval when manually changing slides
        startSlideshow();
      });
    }

    if (nextBtn) {
      nextBtn.addEventListener('click', function() {
        nextSlide();
        // Reset interval when manually changing slides
        startSlideshow();
      });
    }

    // Add click events to dots
    dots.forEach(function(dot, index) {
      dot.addEventListener('click', function() {
        goToSlide(index);
        // Reset interval when manually changing slides
        startSlideshow();
      });
    });

    // Pause on hover (optional feature)
    {% if section.settings.pause_on_hover %}
    slider.addEventListener('mouseenter', function() {
      clearInterval(slideInterval);
    });

    slider.addEventListener('mouseleave', function() {
      startSlideshow();
    });
    {% endif %}
  });
</script>

