{% comment %}
  Two-Columnn Newsletter Section
  - Left column displays an uploaded image
  - Right column contains a newsletter signup form
  - Form includes first name, email, phone, and sign up button
  - Content in right column is left-aligned
{% endcomment %}

<div class="newsletter-section section-{{ section.id }}" id="NewsletterSection-{{ section.id }}">
  <div class="newsletter-container">
    <div class="newsletter-columns">
      <div class="newsletter-image-column">
        {% if section.settings.image != blank %}
          {{
            section.settings.image
            | image_url: width: 1000
            | image_tag:
              loading: 'lazy',
              class: 'newsletter-image',
              sizes: '(min-width: 750px) 50vw, 100vw',
              widths: '550, 720, 990, 1100, 1500',
              alt: section.settings.image.alt
            | default: section.settings.heading
            | escape
          }}
        {% else %}
          <div class="newsletter-image-placeholder">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="24" height="24" fill="none"/>
              <path d="M19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19V5C21 3.9 20.1 3 19 3ZM19 19H5V5H19V19Z" fill="currentColor"/>
              <path d="M14.5 11L12.5 15L11 12.5L9 16H19V11H14.5Z" fill="currentColor"/>
              <path d="M7 10C8.1 10 9 9.1 9 8C9 6.9 8.1 6 7 6C5.9 6 5 6.9 5 8C5 9.1 5.9 10 7 10Z" fill="currentColor"/>
            </svg>
            <p>Add an image</p>
          </div>
        {% endif %}
      </div>

      <div class="newsletter-form-column">
        {% if section.settings.heading != blank %}
          <h2 class="newsletter-heading">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <div class="newsletter-subheading">{{ section.settings.subheading }}</div>
        {% endif %}

        {% form 'customer', id: 'newsletter-form', class: 'newsletter-form' %}
          {% if form.errors %}
            <div class="form-message form-message--error">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          {% if form.posted_successfully? %}
            <div class="form-message form-message--success">
              {{ 'sections.newsletter.success' | t | default: 'Thank you for subscribing!' }}
            </div>
          {% endif %}

          <input type="hidden" name="contact[tags]" value="newsletter">

          <div class="newsletter-form-fields">
            <div class="form-field">
              <label for="FirstName" class="form-label">{{ section.settings.first_name_label }}</label>
              <input
                type="text"
                id="FirstName"
                name="contact[first_name]"
                class="input-field"
                {% if customer %}
                  value="{{ customer.first_name }}"
                {% endif %}
                placeholder="{{ section.settings.first_name_placeholder }}"
                autocomplete="given-name"
                aria-required="true"
              >
            </div>

            <div class="form-field">
              <label for="Email" class="form-label">{{ section.settings.email_label }}</label>
              <input
                type="email"
                id="Email"
                name="contact[email]"
                class="input-field"
                {% if customer %}
                  value="{{ customer.email }}"
                {% endif %}
                placeholder="{{ section.settings.email_placeholder }}"
                autocomplete="email"
                aria-required="true"
                required
              >
            </div>

            <div class="form-field">
              <label for="Phone" class="form-label">{{ section.settings.phone_label }}</label>
              <input
                type="tel"
                id="Phone"
                name="contact[phone]"
                class="input-field"
                {% if customer %}
                  value="{{ customer.phone }}"
                {% endif %}
                placeholder="{{ section.settings.phone_placeholder }}"
                autocomplete="tel"
                aria-required="true"
              >
            </div>

            <div class="form-submit">
              <button type="submit" class="newsletter-submit">
                {{ section.settings.button_label }}
              </button>
            </div>
          </div>

          {% if section.settings.show_disclaimer and section.settings.disclaimer_text != blank %}
            <div class="newsletter-disclaimer">
              {{ section.settings.disclaimer_text }}
            </div>
          {% endif %}
        {% endform %}
      </div>
    </div>
  </div>
</div>

{% style %}
  .newsletter-section {
    margin: {{ section.settings.margin_top }}px 0 {{ section.settings.margin_bottom }}px;
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding }}px 20px;
  }

  .newsletter-container {
    max-width: {{ section.settings.section_width }}px;
    margin: 0 auto;
  }

  .newsletter-columns {
    display: flex;
    align-items: center;
    gap: 40px;
  }

  .newsletter-image-column {
    flex: 1;
    max-width: 50%;
  }

  .newsletter-form-column {
    flex: 1;
    max-width: 50%;
    width: 100%;
    text-align: left;
  }

  .newsletter-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.image_border_radius }}px;
    {% if section.settings.enable_image_shadow %}
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    {% endif %}
  }

  .newsletter-image-placeholder {
    background-color: #f5f5f5;
    border-radius: {{ section.settings.image_border_radius }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 300px;
    padding: 20px;
    color: #777;
  }

  .newsletter-image-placeholder svg {
    width: 60px;
    height: 60px;
    margin-bottom: 15px;
  }

  .newsletter-heading {
    margin: 0 0 15px;
    font-size: 28px;
    font-weight: 600;
    color: {{ section.settings.heading_color }};
    text-align: left;
  }

  .newsletter-subheading {
    margin-bottom: 25px;
    font-size: 16px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    text-align: left;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    width: 100%;
    text-align: left;
  }

  .newsletter-form-fields {
    display: flex;
    flex-direction: column;
    gap: 15px;
    width: 100%;
    text-align: left;
  }

  .form-field {
    display: flex;
    flex-direction: column;
    gap: 5px;
    width: 100%;
    text-align: left;
  }

  .form-label {
    font-size: 14px;
    font-weight: 500;
    color: {{ section.settings.text_color }};
    text-align: left;
  }

  .input-field {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid {{ section.settings.input_border_color }};
    border-radius: 4px;
    font-size: 16px;
    transition: border-color 0.3s, box-shadow 0.3s;
    box-sizing: border-box;
    text-align: left;
  }

  .input-field:focus {
    border-color: {{ section.settings.input_border_color | color_darken: 15 }};
    outline: none;
    box-shadow: 0 0 0 2px rgba({{ section.settings.input_border_color | color_to_rgb }}, 0.2);
  }

  .form-submit {
    width: 100%;
    text-align: left;
  }

  .newsletter-submit {
    display: inline-block;
    width: auto;
    padding: 14px 24px;
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: 4px;
    font-size: 16px;
    font-weight: 600;
    text-align: center;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.1s;
  }

  .newsletter-submit:hover {
    background-color: {{ section.settings.button_color | color_darken: 10 }};
  }

  .newsletter-submit:active {
    transform: translateY(1px);
  }

  .newsletter-disclaimer {
    margin-top: 15px;
    font-size: 12px;
    color: {{ section.settings.text_color | color_lighten: 20 }};
    line-height: 1.4;
    text-align: left;
  }

  .form-message {
    padding: 12px 16px;
    border-radius: 4px;
    margin-bottom: 20px;
    width: 100%;
    box-sizing: border-box;
    text-align: left;
  }

  .form-message--success {
    background-color: #f1f9f5;
    color: #2c7a51;
    border: 1px solid #a3d9bc;
  }

  .form-message--error {
    background-color: #fdf0f0;
    color: #cb2b2b;
    border: 1px solid #f8c6c6;
  }

  /* Explicitly set all elements in the form column to left alignment */
  .newsletter-heading,
  .newsletter-subheading,
  .newsletter-form,
  .form-field,
  .form-label,
  .input-field,
  .form-submit,
  .newsletter-disclaimer,
  .form-message {
    text-align: left;
  }

  /* Responsive styles */
  @media screen and (max-width: 989px) {
    .newsletter-columns {
      gap: 30px;
    }

    .newsletter-heading {
      font-size: 24px;
    }

    .newsletter-subheading {
      font-size: 15px;
    }
  }

  @media screen and (max-width: 749px) {
    .newsletter-section {
      padding: {{ section.settings.section_padding | divided_by: 1.5 }}px 15px;
    }

    .newsletter-columns {
      flex-direction: column;
      gap: 30px;
    }

    .newsletter-image-column,
    .newsletter-form-column {
      max-width: 100%;
      flex: none;
      width: 100%;
    }

    .newsletter-heading {
      font-size: 22px;
    }

    .newsletter-subheading {
      font-size: 14px;
      margin-bottom: 20px;
    }

    .newsletter-form-fields {
      gap: 12px;
    }

    .input-field {
      padding: 10px 14px;
    }

    .newsletter-submit {
      padding: 12px 20px;
    }

    .newsletter-image-placeholder {
      min-height: 200px;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_width",
      "min": 800,
      "max": 1600,
      "step": 50,
      "unit": "px",
      "label": "Section Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Section Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Top Margin",
      "default": 40
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Bottom Margin",
      "default": 40
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Border Radius",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "enable_image_shadow",
      "label": "Enable Shadow",
      "default": true
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Sign up to receive updates, access to exclusive deals, and more.</p>"
    },
    {
      "type": "header",
      "content": "Form Fields"
    },
    {
      "type": "text",
      "id": "first_name_label",
      "label": "First Name Label",
      "default": "First Name"
    },
    {
      "type": "text",
      "id": "first_name_placeholder",
      "label": "First Name Placeholder",
      "default": "Enter your first name"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email Label",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email Placeholder",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "phone_label",
      "label": "Phone Label",
      "default": "Phone Number"
    },
    {
      "type": "text",
      "id": "phone_placeholder",
      "label": "Phone Placeholder",
      "default": "Enter your phone number"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Sign Up"
    },
    {
      "type": "checkbox",
      "id": "show_disclaimer",
      "label": "Show Disclaimer",
      "default": true
    },
    {
      "type": "richtext",
      "id": "disclaimer_text",
      "label": "Disclaimer Text",
      "default": "<p>By signing up, you agree to receive email marketing. You can unsubscribe at any time.</p>"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "input_border_color",
      "label": "Input Border Color",
      "default": "#d9d9d9"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Two-Column Newsletter",
      "category": "Forms"
    }
  ]
}
{% endschema %}
