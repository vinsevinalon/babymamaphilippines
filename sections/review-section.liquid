<div class="review-carousel-container" id="review-carousel">
  <div class="review-carousel-heading">
    <h2>{{ section.settings.heading }}</h2>
  </div>

  <div class="review-carousel-wrapper">
    {% for i in (1..4) %}
      {% assign reviewer_name = 'reviewer_name_' | append: i %}
      {% assign review_text = 'review_text_' | append: i %}
      {% assign review_image = 'reviewer_image_' | append: i %}

      <div class="review-slide{% if forloop.first %} active{% endif %}" data-index="{{ forloop.index0 }}">
        <div class="review-content">
          <div class="review-stars">
            <span class="stars">★★★★★</span>
          </div>
          <blockquote>{{ section.settings[review_text] }}</blockquote>
          <div class="reviewer-info">
            {% if section.settings[review_image] != blank %}
              <div class="reviewer-image">
                <img
                  src="{{ section.settings[review_image] | img_url: '100x100', crop: 'center' }}"
                  alt="{{ section.settings[reviewer_name] }}"
                >
              </div>
            {% endif %}
            <div class="reviewer-name">{{ section.settings[reviewer_name] }}</div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="review-carousel-nav">
    {% for i in (1..4) %}
      <button class="nav-dot{% if forloop.first %} active{% endif %}" data-index="{{ forloop.index0 }}"></button>
    {% endfor %}
  </div>
</div>

<style>
  .review-carousel-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.section_padding }}px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  .review-carousel-heading {
    text-align: center;
    margin-bottom: 30px;
  }

  .review-carousel-wrapper {
    position: relative;
    overflow: hidden;
    min-height: 250px;
  }

  .review-slide {
    position: absolute;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    width: 100%;
    text-align: center;
  }

  .review-slide.active {
    opacity: 1;
    position: relative;
  }

  .review-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  .review-stars {
    font-size: 24px;
    color: {{ section.settings.star_color }};
    margin-bottom: 15px;
  }

  blockquote {
    font-size: 18px;
    font-style: italic;
    margin-bottom: 20px;
    line-height: 1.6;
  }

  .reviewer-info {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
  }

  .reviewer-image img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
  }

  .reviewer-name {
    font-weight: bold;
  }

  .review-carousel-nav {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 20px;
  }

  .nav-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #ccc;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  .nav-dot.active {
    background-color: {{ section.settings.accent_color }};
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const reviewCarousel = document.getElementById('review-carousel');
    const slides = reviewCarousel.querySelectorAll('.review-slide');
    const dots = reviewCarousel.querySelectorAll('.nav-dot');
    let currentIndex = 0;
    let interval;

    function showSlide(index) {
      // Hide all slides and remove active class from dots
      slides.forEach(slide => slide.classList.remove('active'));
      dots.forEach(dot => dot.classList.remove('active'));

      // Show current slide and activate current dot
      slides[index].classList.add('active');
      dots[index].classList.add('active');

      // Update current index
      currentIndex = index;
    }

    function nextSlide() {
      let nextIndex = currentIndex + 1;
      if (nextIndex >= slides.length) {
        nextIndex = 0;
      }
      showSlide(nextIndex);
    }

    // Click handlers for navigation dots
    dots.forEach(dot => {
      dot.addEventListener('click', function() {
        const index = parseInt(this.getAttribute('data-index'));
        showSlide(index);
        resetInterval();
      });
    });

    // Start automatic rotation
    // Get the rotation speed from settings and multiply by 1000 if needed to convert to milliseconds
    function startInterval() {
      let rotationSpeed = {{ section.settings.rotation_speed }};
      // If the value is 10 or less, assume it's in seconds and convert to milliseconds
      if (rotationSpeed <= 10) {
        rotationSpeed = rotationSpeed * 1000;
      }
      interval = setInterval(nextSlide, rotationSpeed);
    }

    function resetInterval() {
      clearInterval(interval);
      startInterval();
    }

    // Initialize the carousel
    startInterval();

    // Pause rotation when mouse is over the carousel
    reviewCarousel.addEventListener('mouseenter', function() {
      clearInterval(interval);
    });

    // Resume rotation when mouse leaves the carousel
    reviewCarousel.addEventListener('mouseleave', function() {
      startInterval();
    });
  });
</script>

