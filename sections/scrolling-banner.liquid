{% liquid
  assign num_loop = 8
  assign number = 1
  if section.blocks.size > 2
    assign num_loop = 4
    assign number = 2
  endif
  if section.blocks.size > 5
    assign num_loop = 2
  endif
  if section.blocks.size > 7
    assign num_loop = 1
    assign number = 1
  endif
  assign duration = section.settings.speed | times: number

  # Calculate size multipliers based on banner height
  assign mobile_height_num = section.settings.mobile_height | remove: 'px' | times: 1
  assign desktop_height_num = section.settings.desktop_height | remove: 'px' | times: 1

  # Set size multipliers based on height ranges
  if mobile_height_num <= 50
    assign mobile_size_multiplier = 0.6
  elsif mobile_height_num <= 70
    assign mobile_size_multiplier = 0.75
  elsif mobile_height_num <= 100
    assign mobile_size_multiplier = 0.9
  elsif mobile_height_num <= 130
    assign mobile_size_multiplier = 1.0
  else
    assign mobile_size_multiplier = 1.2
  endif

  if desktop_height_num <= 60
    assign desktop_size_multiplier = 0.6
  elsif desktop_height_num <= 80
    assign desktop_size_multiplier = 0.75
  elsif desktop_height_num <= 120
    assign desktop_size_multiplier = 0.9
  elsif desktop_height_num <= 160
    assign desktop_size_multiplier = 1.0
  else
    assign desktop_size_multiplier = 1.2
  endif
%}

{% style %}
  .section-{{ section.id }} {
    --duration : {{ duration }}s;
    --direction: {% if section.settings.direction == 'left' %}reverse{% else %}normal{% endif %};
    --mobile-size-multiplier: {{ mobile_size_multiplier }};
    --desktop-size-multiplier: {{ desktop_size_multiplier }};
    {%- unless section.settings.color_text_light.alpha == 0.0 -%}
      --colors-text: {{ section.settings.color_text_light.red }},{{ section.settings.color_text_light.green }},{{ section.settings.color_text_light.blue }};
    {% endunless %}
    {%- unless section.settings.bg_light.alpha == 0.0 -%}
      --colors-background-scrolling: {{ section.settings.bg_light.red }}, {{ section.settings.bg_light.green }}, {{ section.settings.bg_light.blue }};
    {% endunless %}
  }
  .dark .section-{{ section.id }} {
    {%- unless section.settings.color_text_dark.alpha == 0.0 -%}
      --colors-text: {{ section.settings.color_text_dark.red }},{{ section.settings.color_text_dark.green }},{{ section.settings.color_text_dark.blue }};
    {% else %}
      --colors-text: transparent;
    {% endunless %}
     {%- unless section.settings.bg_dark.alpha == 0.0 -%}
      --colors-background-scrolling: {{ section.settings.bg_dark.red }}, {{ section.settings.bg_dark.green }}, {{ section.settings.bg_dark.blue }};
    {% endunless %}
  }
  .section-{{ section.id }} .text-color-secondary {
    {%- unless section.settings.color_text_light_2.alpha == 0.0 -%}
      color: {{ section.settings.color_text_light_2 }};
    {% else %}
      color: {{ settings.secondary_text }};
    {% endunless %}
  }
  .dark .section-{{ section.id }} .text-color-secondary {
    {%- unless section.settings.color_text_dark_2.alpha == 0.0 -%}
      color: {{ section.settings.color_text_dark_2 }};
    {% else %}
      color: {{ settings.secondary_text_dark }};
    {% endunless %}
  }
  {% if section.settings.pause_hover %}
    .section-{{ section.id }}:hover .el_animate {
      animation-play-state: paused;
    }
  {% endif %}
  .space-blocks-{{ section.id }} {
    padding-inline-end: {{ section.settings.space_block_mobile }}px;
  }
  .rtl.space-blocks-{{ section.id }} {
    padding-inline-start: {{ section.settings.space_block_mobile }}px;
    padding-inline-end: 0
  }
  .bg-{{ section.id }} {
    background: {{ section.settings.bg_light }};
    transition: all 0.3s;
  }
  .dark .bg-{{ section.id }} {
    {% if section.settings.bg_dark == blank %}
      background: transparent;
    {% else %}
      background: {{ section.settings.bg_dark }};
    {% endif %}
  }

  /* Fixed height controls with overflow handling */
  .banner-container-{{ section.id }} {
    {% if section.settings.image != blank %}
      {% if section.settings.mobile_height == 'natural' %}
        aspect-ratio: {{ section.settings.image.aspect_ratio }};
      {% else %}
        height: {{ section.settings.mobile_height }};
        max-height: {{ section.settings.mobile_height }};
        overflow: hidden;
      {% endif %}
    {% else %}
      {% unless section.settings.mobile_height == 'natural' %}
        height: {{ section.settings.mobile_height }};
        max-height: {{ section.settings.mobile_height }};
        overflow: hidden;
      {% endunless %}
    {% endif %}
  }

  /* Content container to ensure proper centering */
  .banner-content-{{ section.id }} {
    height: 100%;
    display: flex;
    align-items: center;
  }

  /* Scrolling content wrapper */
  .scrolling-wrapper-{{ section.id }} {
    {% if section.settings.image == blank %}
      padding-top: 0 !important;
      padding-bottom: 0 !important;
    {% endif %}
  }

  @media (min-width: 767px) {
    .space-blocks-{{ section.id }} {
      padding-inline-end: {{ section.settings.space_block }}px;
    }
    .rtl.space-blocks-{{ section.id }} {
      padding-inline-start: {{ section.settings.space_block }}px;
      padding-inline-end: 0
    }

    /* Desktop height controls */
    .banner-container-{{ section.id }} {
      {% if section.settings.image != blank %}
        {% if section.settings.desktop_height == 'natural' %}
          aspect-ratio: {{ section.settings.image.aspect_ratio }};
          height: auto;
          max-height: none;
          overflow: visible;
        {% else %}
          height: {{ section.settings.desktop_height }};
          max-height: {{ section.settings.desktop_height }};
          overflow: hidden;
        {% endif %}
      {% else %}
        {% unless section.settings.desktop_height == 'natural' %}
          height: {{ section.settings.desktop_height }};
          max-height: {{ section.settings.desktop_height }};
          overflow: hidden;
        {% endunless %}
      {% endif %}
    }
  }
{% endstyle %}

{% for block in section.blocks %}
  {%- case block.type -%}
    {%- when 'icon' -%}
      {% liquid
        assign mobile_icon_size = block.settings.height_icon | times: mobile_size_multiplier
        assign desktop_icon_size = block.settings.height_icon | times: desktop_size_multiplier
      %}
      {% style %}
        .icon-{{ block.id }} {
          width: {{ mobile_icon_size }}px;
          height: {{ mobile_icon_size }}px;
        }
        .space-block-{{ block.id }} {
          margin-left: {{ block.settings.spacing_left_mobile }}px;
          margin-right: {{ block.settings.spacing_right_mobile }}px;
        }
        @media (min-width: 767px) {
          .icon-{{ block.id }} {
            width: {{ desktop_icon_size }}px;
            height: {{ desktop_icon_size }}px;
          }
          .space-block-{{ block.id }} {
            margin-left: {{ block.settings.spacing_left }}px;
            margin-right: {{ block.settings.spacing_right }}px;
          }
        }
      {% endstyle %}
    {%- when 'image' -%}
      {% if block.settings.image != blank %}
        {% liquid
          assign mobile_img_height = block.settings.height_image | times: mobile_size_multiplier
          assign desktop_img_height = block.settings.height_image | times: desktop_size_multiplier
          assign mobile_w_img = block.settings.image.aspect_ratio | times: mobile_img_height
          assign desktop_w_img = block.settings.image.aspect_ratio | times: desktop_img_height
        %}
        {% style %}
          .img-{{ block.id }} {
            width: {{ mobile_w_img }}px;
            height: {{ mobile_img_height }}px;
          }
          .space-block-{{ block.id }} {
            margin-left: {{ block.settings.spacing_left_mobile }}px;
            margin-right: {{ block.settings.spacing_right_mobile }}px;
          }
          @media (min-width: 767px) {
            .img-{{ block.id }} {
              width: {{ desktop_w_img }}px;
              height: {{ desktop_img_height }}px;
            }
            .space-block-{{ block.id }} {
              margin-left: {{ block.settings.spacing_left }}px;
              margin-right: {{ block.settings.spacing_right }}px;
            }
          }
        {% endstyle %}
      {% endif %}
    {%- when 'text' -%}
      {% if block.settings.text != blank %}
        {%- liquid
          assign base_size = settings.text_base_size | times: 0.00875
          assign font_size = block.settings.text_size | times: 0.01 | times: base_size
          assign mobile_font_size = font_size | times: mobile_size_multiplier
          assign desktop_font_size = font_size | times: desktop_size_multiplier
        -%}
        {%- style -%}
          .text--{{ block.id }} {
            font-size: {{ mobile_font_size }}rem;
            line-height: 1.2;
          }
          .space-block-{{ block.id }} {
            margin-left: {{ block.settings.spacing_left_mobile }}px;
            margin-right: {{ block.settings.spacing_right_mobile }}px;
          }
          @media (min-width: 767px){
            .text--{{ block.id }} {
              font-size: {{ desktop_font_size }}rem;
              line-height: 1.3;
            }
            .space-block-{{ block.id }} {
              margin-left: {{ block.settings.spacing_left }}px;
              margin-right: {{ block.settings.spacing_right }}px;
            }
          }
        {%- endstyle -%}
      {% endif %}
    {%- when 'heading' -%}
      {% if block.settings.text != blank %}
        {%- liquid
          assign heading_size = settings.heading_base_size | times: block.settings.text_size | times: 0.000225
          assign mobile_heading_size = heading_size | times: mobile_size_multiplier
          assign desktop_heading_size = heading_size | times: desktop_size_multiplier
        -%}
        {%- style -%}
          .text--{{ block.id }} {
            font-size: {{ mobile_heading_size }}rem;
            line-height: 1.2;
          }
          .space-block-{{ block.id }} {
            margin-left: {{ block.settings.spacing_left_mobile }}px;
            margin-right: {{ block.settings.spacing_right_mobile }}px;
          }
          .heading-{{ block.id }} {
            {% if block.settings.text_fill.alpha != 0.0 or block.settings.text_outline.alpha != 0.0 %}
              color: {{ block.settings.text_fill }};
            {% endif %}
            {% if block.settings.text_outline.alpha != 0.0 %}
              -webkit-text-stroke: 1px {{ block.settings.text_outline }};
            {% endif %}
          }
          @media (min-width: 767px) {
            .text--{{ block.id }} {
              font-size: {{ desktop_heading_size }}rem;
              line-height: 1.3;
            }
            .space-block-{{ block.id }} {
              margin-left: {{ block.settings.spacing_left }}px;
              margin-right: {{ block.settings.spacing_right }}px;
            }
          }
        {%- endstyle -%}
      {% endif %}
    {%- when 'button' -%}
      {% liquid
        assign mobile_button_padding_y = 6 | times: mobile_size_multiplier | round
        assign mobile_button_padding_x = 12 | times: mobile_size_multiplier | round
        assign desktop_button_padding_y = 8 | times: desktop_size_multiplier | round
        assign desktop_button_padding_x = 16 | times: desktop_size_multiplier | round
        assign mobile_button_font = 0.875 | times: mobile_size_multiplier
        assign desktop_button_font = 0.9 | times: desktop_size_multiplier
      %}
      {% style %}
        .button--{{ block.id }}.button-solid,
        .button--{{ block.id }}.button-solid:before {
          {%- unless block.settings.color_button.alpha == 0.0 -%}
            --colors-line-and-border: {{ block.settings.color_button.red }}, {{ block.settings.color_button.green }}, {{ block.settings.color_button.blue }};
            --colors-button: {{ block.settings.color_button.red }}, {{ block.settings.color_button.green }}, {{ block.settings.color_button.blue }};
          {%- else -%}
            --colors-line-and-border: var(--colors-button);
          {%- endunless -%}
          {%- unless block.settings.color_button_hover.alpha == 0.0 -%}
            --colors-button-hover: rgb({{ block.settings.color_button_hover.red }}, {{ block.settings.color_button_hover.green }}, {{ block.settings.color_button_hover.blue }});
          {%- endunless -%}
          {%- unless block.settings.color_text_button.alpha == 0.0 -%}
            --colors-button-text: {{ block.settings.color_text_button.red }}, {{ block.settings.color_text_button.green }}, {{ block.settings.color_text_button.blue }};
          {%- endunless -%}
          {%- unless block.settings.color_text_button_hover.alpha == 0.0 -%}
            --colors-button-text-hover: {{ block.settings.color_text_button_hover.red }}, {{ block.settings.color_text_button_hover.green }}, {{ block.settings.color_text_button_hover.blue }};
          {%- endunless -%}
        }
        .button--{{ block.id }}.button-outline {
          {%- if block.settings.secondary_button_text.alpha != 0.0 -%}
            --colors-secondary-button: {{ block.settings.secondary_button_text.red }}, {{ block.settings.secondary_button_text.green }}, {{ block.settings.secondary_button_text.blue }};
            --colors-line-secondary-button: {{ block.settings.secondary_button_text.red }}, {{ block.settings.secondary_button_text.green }}, {{ block.settings.secondary_button_text.blue }};
            --background-secondary-button: transparent;
          {% endif %}
          {%- if block.settings.color_button_secondary.alpha != 0.0 -%}
            --background-secondary-button: {{ block.settings.color_button_secondary.red }}, {{ block.settings.color_button_secondary.green }}, {{ block.settings.color_button_secondary.blue }};
            --colors-line-secondary-button: {{ block.settings.color_button_secondary.red }}, {{ block.settings.color_button_secondary.green }}, {{ block.settings.color_button_secondary.blue }};
          {% endif %}
        }
        {% if block.settings.colors_text_link.alpha != 0.0 %}
          .button--{{ block.id }}.button-text-link, .button--{{ block.id }}.button-text-link::after, .button--{{ block.id }}.button-text-link::before {
            --colors-text-link: {{ block.settings.colors_text_link.red }}, {{ block.settings.colors_text_link.green }}, {{ block.settings.colors_text_link.blue }};
          }
        {% endif %}
        .space-block-{{ block.id }} {
          margin-left: {{ block.settings.spacing_left_mobile }}px;
          margin-right: {{ block.settings.spacing_right_mobile }}px;
        }
        /* Dynamic button sizing based on banner height */
        .button--{{ block.id }} {
          padding: {{ mobile_button_padding_y }}px {{ mobile_button_padding_x }}px !important;
          font-size: {{ mobile_button_font }}rem !important;
          line-height: 1.2 !important;
        }
        @media (min-width: 767px) {
          .space-block-{{ block.id }} {
            margin-left: {{ block.settings.spacing_left }}px;
            margin-right: {{ block.settings.spacing_right }}px;
          }
          .button--{{ block.id }} {
            padding: {{ desktop_button_padding_y }}px {{ desktop_button_padding_x }}px !important;
            font-size: {{ desktop_button_font }}rem !important;
          }
        }
      {% endstyle %}
  {% endcase %}
{% endfor %}

{% capture content %}
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'icon' -%}
        <div class="space-blocks-{{ section.id }} space-block-{{ block.id }} flex whitespace-nowrap">
          <span class="inline-block icon-{{ block.id }}">
            {% if block.settings.custom_icon == blank %}
              {% if block.settings.another_icon != blank and block.settings.icon == 'another_icon' %}
                {% render 'icon-new-alls', icon: block.settings.another_icon %}
              {% else %}
                {% render 'icon-labels-bags', icon: block.settings.icon %}
              {% endif %}
            {% else %}
              {{ block.settings.custom_icon }}
            {% endif %}
          </span>
        </div>
      {%- when 'image' -%}
        {% liquid
          assign mobile_img_height = block.settings.height_image | times: mobile_size_multiplier
          assign mobile_w_img = block.settings.image.aspect_ratio | times: mobile_img_height
          assign img_src = mobile_w_img | plus: 50
        %}
        <div class="h-full w-max flex items-center space-blocks-{{ section.id }} space-block-{{ block.id }} whitespace-nowrap">
          <div class="img-{{ block.id }} overflow-hidden relative{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}">
            {% if block.settings.image != blank %}
              <div class="w-full h-full z-0 overflow-hidden absolute top-0 left-0 animate_transition_card__image animate-Xpulse skeleton-image">
                <img
                  class="w-full h-full absolute top-0 left-0"
                  src="{{ block.settings.image | image_url: width: img_src }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"  
                  onload="this.closest('.animate_transition_card__image')?.classList.remove('animate-Xpulse', 'skeleton-image');
                    setTimeout(() => { this.closest('.animate_transition_card__image')?.classList.add('lazy_active', 'active'); }, 250);"
                  width="{{ mobile_w_img }}"
                  height="{{ mobile_img_height }}"
                >
              </div>
            {% else %}
              {% style %}
                .image-block-{{ block.id }} {
                  height: {{ mobile_img_height }}px;
                }
              {% endstyle %}
              {% assign class = 'w-[120px] bg-[#C9C9C9] text-[#acacac] image-block-' | append: block.id %}
              {{ 'image' | placeholder_svg_tag: class }}
            {% endif %}
          </div>
        </div>
      {%- when 'text' -%}
        {% if block.settings.text != blank %}
          <div class="min-w-max space-blocks-{{ section.id }} space-block-{{ block.id }} whitespace-nowrap text-color-{{ block.settings.text_color }}{% if settings.lang_direction contains request.locale.iso_code %} rtl{% endif %}">
            <p class="empty:hidden heading-{{ block.id }} text--{{ block.id }} font-medium">
              {% render 'heading-highlight',
                headingId: block.id,
                heading: block.settings.text,
                highlight_type: block.settings.highlight_type,
                color_heading_highlight_dark: section.settings.color_heading_highlight_dark,
                color_heading_highlight_light: section.settings.color_heading_highlight_light
              %}
            </p>
          </div>
        {% endif %}
      {%- when 'heading' -%}
        {% if block.settings.text != blank %}
          <div class="min-w-max space-blocks-{{ section.id }} space-block-{{ block.id }} whitespace-nowrap{% if settings.lang_direction contains request.locale.iso_code %} rtl{% endif %}">
            <p class="empty:hidden h2 heading-{{ block.id }} text--{{ block.id }}">
              {% render 'heading-highlight',
                headingId: block.id,
                heading: block.settings.text,
                highlight_type: block.settings.highlight_type,
                color_heading_highlight_dark: section.settings.color_heading_highlight_dark,
                color_heading_highlight_light: section.settings.color_heading_highlight_light
              %}
            </p>
          </div>
        {% endif %}
      {%- when 'button' -%}
        {% if block.settings.button_label != blank %}
          <div class="min-w-max space-blocks-{{ section.id }} space-block-{{ block.id }} whitespace-nowrap">
            {%- if block.settings.button_link != blank -%}
              <a 
                href="{{ block.settings.button_link }}"
                class="disable-effect" 
                tabindex="-1"
                {% if block.settings.open_new_window %}target="_blank"{% endif %}
              >
            {%- endif -%}
              <div class="button button--{{ block.id }}{% if block.settings.show_button_style == 'secondary' %} button-outline{% elsif block.settings.show_button_style == 'text-link' %} button-text-link {% else %} button-solid{% endif %} empty:hidden leading-normal text-center{% unless block.settings.button_link != blank %} opacity-70 hover:cursor-not-allowed{% endunless %}">
                {% render 'button-label', button_label: block.settings.button_label, show_button_style: block.settings.show_button_style %}
              </div>
            {%- if block.settings.button_link != blank -%}
              </a>
            {%- endif -%}
          </div>
        {% endif %}
    {% endcase %}
  {% endfor %}
{% endcapture %}

<div class="bg-{{ section.id }} pb-[{{ section.settings.padding_bottom_mobile }}px] pt-[{{ section.settings.padding_top_mobile }}px] md:pb-[{{ section.settings.padding_bottom }}px] md:pt-[{{ section.settings.padding_top }}px]">
  <div class="banner-container-{{ section.id }} ltr relative">
    {% if section.settings.image != blank %}
      <span
        class="h-full w-full absolute top-0 left-0 bottom-0 right-0 z-[2] image-treatment-overlay transition-opacity opacity-{{ section.settings.overlay_opacity }}"
      ></span>
      <div class="w-full h-full z-0 absolute top-0 left-0">
        <div class="h-full w-full animate-Xpulse skeleton-image">
          <img
            class="block w-full h-full object-cover object-center"
            srcset="
              {{ section.settings.image | image_url: width: 375 }} 375w,
              {{ section.settings.image | image_url: width: 450 }} 450w,
              {{ section.settings.image | image_url: width: 750 }} 750w,
              {{ section.settings.image | image_url: width: 900 }} 900w,
              {{ section.settings.image | image_url: width: 1100 }} 1100w,
              {{ section.settings.image | image_url: width: 1500 }} 1500w,
              {{ section.settings.image | image_url: width: 1780 }} 1780w,
              {{ section.settings.image | image_url: width: 2000 }} 2000w,
              {{ section.settings.image | image_url: width: 3000 }} 3000w,
              {{ section.settings.image | image_url: width: 3840 }} 3840w
            "
            sizes="100vw"
            src="{{ section.settings.image | image_url: width: 3840 }}"
            loading="lazy"
            onload="this.closest('.skeleton-image')?.classList.remove('animate-Xpulse', 'skeleton-image');"
            alt="{{ section.settings.image.alt | escape }}"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.width | divided_by: section.settings.image.aspect_ratio }}"
            style="object-position: {{ section.settings.image.presentation.focal_point }};"
          >
        </div>
      </div>
    {% endif %}

    <div class="banner-content-{{ section.id }}">
      <div
        x-intersect.once.margin.200px="$store.xScrollPromotion.load($el)"
        {% if section.settings.enable_rotating_effect %}
          x-intersect.once.margin.300px="$store.xScrollPromotion.updateRotation($el, {% if settings.lang_direction contains request.locale.iso_code %}true{% endif %})"
        {% endif %}
        class="text-[rgb(var(--colors-text))] z-10 section-{{ section.id }} ltr{% if section.settings.enable_rotating_effect %} overflow-hidden{% endif %} relative w-full scrolling-wrapper-{{ section.id }}"
      >
        <div
          class="w-[110%] overflow-hidden {% if section.settings.show_border %} border-y border-solid{% endif %}{% if section.settings.image == blank %} pt-0 pb-0{% endif %}"
        >
          <div class="flex flex-nowrap whitespace-nowrap min-w-full">
            <div class="flex shrink-0 whitespace-nowrap items-center el_animate element-{{ section.id }}">
              {% for i in (1..num_loop) %}
                {{ content }}
              {% endfor %}
            </div>
            <div class="flex shrink-0 whitespace-nowrap items-center el_animate">
              {% for i in (1..num_loop) %}
                {{ content }}
              {% endfor %}
            </div>
            <div class="flex shrink-0 whitespace-nowrap items-center el_animate">
              {% for i in (1..num_loop) %}
                {{ content }}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="{{ 'scrolling-promotion.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "t:sections.scrolling_promotion.name",
  "class": "section section-scroll-banner x-section relative overflow-hidden",
  "tag": "section",
  "disabled_on": {
    "groups": [
      "footer",
      "aside"
    ]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "show_border",
      "default": true,
      "label": "t:sections.scrolling_promotion.settings.show_border.label"
    },
    {
      "type": "header",
      "content": "t:sections.scrolling_promotion.settings.header_2.content"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 6,
      "max": 50,
      "step": 2,
      "unit": "s",
      "label": "t:sections.scrolling_promotion.settings.speed.label",
      "default": 20
    },
    {
      "type": "select",
      "id": "direction",
      "options": [
        {
          "value": "left",
          "label": "t:sections.scrolling_promotion.settings.direction.options__1.label"
        },
        {
          "value": "right",
          "label": "t:sections.scrolling_promotion.settings.direction.options__2.label"
        }
      ],
      "default": "right",
      "label": "t:sections.scrolling_promotion.settings.direction.label"
    },
    {
      "type": "checkbox",
