{% comment %}
  Uniform Image Grid Section
  - Displays 8 images in a 4x2 grid layout
  - All boxes have the same height and width
  - Fully responsive with optimized mobile view
  - Performance optimized with lazy loading
{% endcomment %}

<div class="image-grid-section section-{{ section.id }}" id="ImageGrid-{{ section.id }}">
  <div class="section-container">
    {% if section.settings.title != blank %}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.title | escape }}</h2>
        {% if section.settings.subtitle != blank %}
          <div class="section-subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="image-grid">
      {% for block in section.blocks limit: 8 %}
        {% if block.settings.image != blank %}
          <div class="grid-item" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="grid-item-link">
            {% endif %}
            <div class="grid-image-container">
              {{
                block.settings.image
                | image_url: width: 800
                | image_tag:
                  loading: 'lazy',
                  class: 'grid-image',
                  sizes: '(min-width: 990px) 25vw, (min-width: 750px) 33vw, 50vw',
                  widths: '400, 600, 800, 1200',
                  alt: block.settings.image.alt
                | default: block.settings.title
                | escape
              }}

              {% if block.settings.show_overlay and block.settings.title != blank %}
                <div
                  class="grid-overlay"
                  style="background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity }});"
                >
                  <div class="grid-content">
                    <h3 class="grid-title">{{ block.settings.title | escape }}</h3>
                    {% if block.settings.subtitle != blank %}
                      <div class="grid-subtitle">{{ block.settings.subtitle }}</div>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            </div>
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        {% else %}
          <div class="grid-item placeholder" {{ block.shopify_attributes }}>
            <div class="placeholder-content">
              <div class="placeholder-icon">
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M4 5C4 4.44772 4.44772 4 5 4H19C19.5523 4 20 4.44772 20 5V19C20 19.5523 19.5523 20 19 20H5C4.44772 20 4 19.5523 4 19V5Z" stroke="currentColor" stroke-width="2"/>
                  <path d="M9 11C10.1046 11 11 10.1046 11 9C11 7.89543 10.1046 7 9 7C7.89543 7 7 7.89543 7 9C7 10.1046 7.89543 11 9 11Z" stroke="currentColor" stroke-width="2"/>
                  <path d="M4 19L8 15L10 17L15 12L20 17" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <p>Add an image</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}

      {% if section.blocks.size == 0 %}
        <div class="placeholder-message">
          <p>Add image blocks to create a grid layout.</p>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% style %}
  .image-grid-section {
    margin: {{ section.settings.margin_top }}px 0 {{ section.settings.margin_bottom }}px;
  }

  .section-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .section-title {
    margin: 0 0 10px;
    font-size: 28px;
    font-weight: 600;
  }

  .section-subtitle {
    font-size: 16px;
    opacity: 0.85;
  }

  /* Updated grid layout with uniform box sizes */
  .image-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 1fr);
    grid-gap: {{ section.settings.grid_gap }}px;
  }

  .grid-item {
    position: relative;
    overflow: hidden;
    aspect-ratio: {{ section.settings.aspect_ratio }};
    border-radius: {{ section.settings.border_radius }}px;
    box-shadow: {{ section.settings.enable_shadow | default: false | ternary: '0 4px 8px rgba(0,0,0,0.1)', 'none' }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    will-change: transform;
    background-color: #f5f5f5;
  }

  /* Ensure every grid item has a minimum height */
  .grid-item {
    min-height: 180px;
  }

  {% if section.settings.enable_hover %}
  .grid-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.15);
  }

  .grid-item:hover .grid-image {
    transform: scale(1.05);
  }

  .grid-item:hover .grid-overlay {
    opacity: 1;
  }
  {% endif %}

  .grid-item-link {
    display: block;
    height: 100%;
    width: 100%;
    text-decoration: none;
    color: inherit;
  }

  .grid-image-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .grid-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
    font-family: "object-fit: cover"; /* For IE/Edge */
  }

  .grid-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: {{ section.settings.always_show_overlay | default: false | ternary: '1', '0' }};
    transition: opacity 0.3s ease;
  }

  .grid-content {
    text-align: center;
    color: white;
    padding: 20px;
    max-width: 100%;
  }

  .grid-title {
    margin: 0 0 8px;
    font-size: 18px;
    font-weight: 600;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }

  .grid-subtitle {
    font-size: 14px;
    opacity: 0.9;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .placeholder-content,
  .placeholder-message {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    text-align: center;
    color: #777;
  }

  .placeholder-icon {
    width: 50px;
    height: 50px;
    margin-bottom: 10px;
    color: #aaa;
  }

  .placeholder-message {
    grid-column: 1 / -1;
    padding: 60px 20px;
    background-color: #f9f9f9;
    border-radius: {{ section.settings.border_radius }}px;
  }

  /* Responsive styles */
  @media screen and (max-width: 989px) {
    .section-title {
      font-size: 24px;
    }

    /* Tablet layout - 4 columns, but adjust rows */
    .image-grid {
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: repeat(2, 1fr);
    }

    .grid-title {
      font-size: 16px;
    }

    .grid-subtitle {
      font-size: 13px;
    }
  }

  @media screen and (max-width: 767px) {
    /* Smaller tablet - 3 columns */
    .image-grid {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(3, 1fr);
    }

    .grid-content {
      padding: 12px;
    }

    .grid-title {
      font-size: 15px;
    }
  }

  @media screen and (max-width: 749px) {
    .section-title {
      font-size: 22px;
    }

    .section-container {
      padding: 0 15px;
    }

    .image-grid {
      grid-gap: {{ section.settings.grid_gap | divided_by: 2 }}px;
    }

    /* Mobile layout options */
    {% if section.settings.mobile_layout == '1col' %}
    .image-grid {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(8, auto);
    }
    {% else %}
    .image-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(4, 1fr);
    }
    {% endif %}

    .grid-content {
      padding: 10px;
    }

    .grid-title {
      font-size: 14px;
      margin-bottom: 4px;
    }

    .grid-subtitle {
      font-size: 12px;
    }
  }
{% endstyle %}

