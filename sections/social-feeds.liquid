{% liquid
  assign enable_desktop_slider = section.settings.enable_carousel_on_desktop
  assign columns_mobile =  section.settings.columns_mobile | plus: 0
  if section.settings.swiper_on_mobile
    if section.blocks.size <= columns_mobile
      assign swiper_on_mobile = false
    else
      assign swiper_on_mobile = true
    endif
  else
    assign swiper_on_mobile = false
  endif
  if section.blocks.size <= section.settings.columns_desktop
    assign enable_desktop_slider = false
  endif
  if settings.lang_direction contains request.locale.iso_code
    assign class_rtl = "margin-left"
  else
    assign class_rtl = "margin-right"
  endif
  assign arrow_carousel_desktop = false
  if section.settings.show_navigation and enable_desktop_slider
    assign arrow_carousel_desktop = true
  endif
  assign arrow_swipe_mobile = false
  if swiper_on_mobile and section.settings.enable_arrow_mobile
    assign arrow_swipe_mobile = true
  endif
  if settings.enable_lazy_loading_image
    assign loading = 'lazy'
  else
    assign loading = 'eager'
  endif
%}
{%- style -%} 
  .spacing-mobile-{{ section.id }} {
    gap: {{ section.settings.spacing_mobile }}px;
  }
  {% if swiper_on_mobile %}
    .preload-slide--{{ section.id }}-mobile {
      {{ class_rtl }}: {{ section.settings.spacing_mobile }}px;
      {% if columns_mobile == 1 %}
        width: 100%
      {% else %}
        width: calc((100% - {{ section.settings.spacing_mobile }}px)/2)
      {% endif %}
    }
  {% endif %}

  @media screen and (max-width: 767px) {
    .mobile-column-2-{{ section.id }} {
      width: calc((100% - {{ section.settings.spacing_mobile }}px)/2)
    }
  }
  @media screen and (min-width: 768px) {
    .spacing--desktop-{{ section.id }} {
      {% if enable_desktop_slider %}
        gap: 0px;
      {% else %}
        gap: {{ section.settings.spacing }}px;
      {% endif %}
    }
    .preload-slide--{{ section.id }} {
      {% if enable_desktop_slider %}
        {{ class_rtl }}: {{ section.settings.spacing }}px;
      {% else %}
        {{ class_rtl }}: 0px;
      {% endif %}
      {% if section.settings.columns_desktop != 0 %}
        width: calc(((100% + {{ section.settings.spacing }}px) / 4) - {{ section.settings.spacing }}px);
      {% else %}
        width: auto;
      {% endif %}
    }
  }

  @media screen and (min-width: 1024px) {
    .preload-slide--{{ section.id }} {
      {% if enable_desktop_slider %}
        {{ class_rtl }}: {{ section.settings.spacing }}px;
      {% else %}
        {{ class_rtl }}: 0px;
      {% endif %}
      {% if section.settings.columns_desktop != 0 %}
        width: calc(((100% + {{ section.settings.spacing }}px) / {{ section.settings.columns_desktop }}) - {{ section.settings.spacing }}px);
      {% else %}
        width: auto;
      {% endif %}
    }
  }
  #shopify-section-{{ section.id }}{
    {% if section.settings.background_color_light.alpha != 0.0 %}
      background: {{ section.settings.background_color_light }};
      --background-color: {{ section.settings.background_color_light.red }}, {{ section.settings.background_color_light.green }}, {{ section.settings.background_color_light.blue }};
    {% else %}
      --background-color: {{ settings.colors_background.red }},{{ settings.colors_background.green }},{{ settings.colors_background.blue }};
      background: {{ settings.colors_background }};
    {% endif %}
  }
  .dark #shopify-section-{{ section.id }}{
    {%- if section.settings.background_color_dark.alpha != 0.0 -%}
      background: {{ section.settings.background_color_dark }};
      --background-color: {{ section.settings.background_color_dark.red }}, {{ section.settings.background_color_dark.green }}, {{ section.settings.background_color_dark.blue }};
    {%- else -%}
      background: {{ settings.colors_dark_background }};
      --background-color:  {{ settings.colors_dark_background.red }},{{ settings.colors_dark_background.green }},{{ settings.colors_dark_background.blue }};
    {%- endif -%}
  }
  .section--{{ section.id }} {
    {% if section.settings.text_light.alpha != 0.0 %}
      --colors-text: {{ section.settings.text_light.red }},{{ section.settings.text_light.green }},{{ section.settings.text_light.blue }};
    {% endif %}
    {% if section.settings.heading_light.alpha != 0.0 %}
      --colors-heading: {{ section.settings.heading_light.red }},{{ section.settings.heading_light.green }},{{ section.settings.heading_light.blue }};
    {% endif %}
  }
  .dark .section--{{ section.id }} {
    {% if section.settings.text_dark.alpha != 0.0 %}
      --colors-text: {{ section.settings.text_dark.red }},{{ section.settings.text_dark.green }},{{ section.settings.text_dark.blue }};
    {% else %}        
      --colors-text: {{ settings.colors_dark_text.red }}, {{ settings.colors_dark_text.green }}, {{ settings.colors_dark_text.blue }};
    {% endif %}
    {% if section.settings.heading_dark.alpha != 0.0 %}
      --colors-heading: {{ section.settings.heading_dark.red }},{{ section.settings.heading_dark.green }},{{ section.settings.heading_dark.blue }};
    {% else %}        
      --colors-heading: {{ settings.colors_dark_heading.red }}, {{ settings.colors_dark_heading.green }}, {{ settings.colors_dark_heading.blue }};
    {% endif %}
  }
  .button-{{ section.id }}, .button-{{ section.id }} *:before {
    {% if section.settings.button_light.alpha != 0.0 %}
      --colors-button: {{ section.settings.button_light.red }}, {{ section.settings.button_light.green }}, {{ section.settings.button_light.blue }};
    {% endif %}
    {% if section.settings.button_text_light.alpha != 0.0 %}
      --colors-button-text: {{ section.settings.button_text_light.red }}, {{ section.settings.button_text_light.green }}, {{ section.settings.button_text_light.blue }};
    {% endif %}
    {% if section.settings.button_hover_light.alpha != 0.0 %}
      --colors-button-hover: rgb({{ section.settings.button_hover_light.red }}, {{ section.settings.button_hover_light.green }}, {{ section.settings.button_hover_light.blue }});
    {% endif %}
    {% if section.settings.button_text_hover_light.alpha != 0.0 %}
      --colors-button-text-hover: {{ section.settings.button_text_hover_light.red }}, {{ section.settings.button_text_hover_light.green }}, {{ section.settings.button_text_hover_light.blue }};
    {% endif %}
    {% if section.settings.secondary_button_text_light.alpha != 0.0 %}
      --colors-secondary-button: {{ section.settings.secondary_button_text_light.red }}, {{ section.settings.secondary_button_text_light.green }}, {{ section.settings.secondary_button_text_light.blue }};
      --colors-line-secondary-button: {{ section.settings.secondary_button_text_light.red }}, {{ section.settings.secondary_button_text_light.green }}, {{ section.settings.secondary_button_text_light.blue }};
      --background-secondary-button: transparent;
    {% endif %}
    {% if section.settings.secondary_button_light.alpha != 0.0 %}
      --background-secondary-button: {{ section.settings.secondary_button_light.red }}, {{ section.settings.secondary_button_light.green }}, {{ section.settings.secondary_button_light.blue }};
      --colors-line-secondary-button: {{ section.settings.secondary_button_light.red }}, {{ section.settings.secondary_button_light.green }}, {{ section.settings.secondary_button_light.blue }};
    {% endif %}
    {% if section.settings.colors_text_link.alpha != 0.0 %}
      --colors-text-link: {{ section.settings.colors_text_link.red }}, {{ section.settings.colors_text_link.green }}, {{ section.settings.colors_text_link.blue }};
    {% endif %}
  }
  .dark .button-{{ section.id }}, .dark .button-{{ section.id }} *:before {
    {% if section.settings.button_dark.alpha != 0.0 %}
      --colors-button: {{ section.settings.button_dark.red }}, {{ section.settings.button_dark.green }}, {{ section.settings.button_dark.blue }};
    {% else %}  
      --colors-button: {{ settings.colors_dark_button.red }}, {{ settings.colors_dark_button.green }}, {{ settings.colors_dark_button.blue }};
    {% endif %}
    {% if section.settings.button_text_dark.alpha != 0.0 %}
      --colors-button-text: {{ section.settings.button_text_dark.red }}, {{ section.settings.button_text_dark.green }}, {{ section.settings.button_text_dark.blue }};
    {% else %} 
      --colors-button-text: {{ settings.colors_dark_button_text.red }}, {{ settings.colors_dark_button_text.green }}, {{ settings.colors_dark_button_text.blue }}; 
    {% endif %}
    {% if section.settings.button_hover_dark.alpha != 0.0 %}
      --colors-button-hover: rgb({{ section.settings.button_hover_dark.red }}, {{ section.settings.button_hover_dark.green }}, {{ section.settings.button_hover_dark.blue }});
    {% else %}  
      --colors-button-hover: rgb({{ settings.colors_dark_button_hover.red }}, {{ settings.colors_dark_button_hover.green }}, {{ settings.colors_dark_button_hover.blue }});
    {% endif %}
    {% if section.settings.button_text_hover_dark.alpha != 0.0 %}
      --colors-button-text-hover: {{ section.settings.button_text_hover_dark.red }}, {{ section.settings.button_text_hover_dark.green }}, {{ section.settings.button_text_hover_dark.blue }};
    {% else %}  
      --colors-button-text-hover: {{ settings.colors_dark_button_text_hover.red }}, {{ settings.colors_dark_button_text_hover.green }}, {{ settings.colors_dark_button_text_hover.blue }};
    {% endif %}
    {% if section.settings.secondary_button_text_dark.alpha != 0.0 %}
      --colors-secondary-button: {{ section.settings.secondary_button_text_dark.red }}, {{ section.settings.secondary_button_text_dark.green }}, {{ section.settings.secondary_button_text_dark.blue }};
      --colors-line-secondary-button: {{ section.settings.secondary_button_text_dark.red }}, {{ section.settings.secondary_button_text_dark.green }}, {{ section.settings.secondary_button_text_dark.blue }};
      --background-secondary-button: transparent;
    {% else %}  
      --colors-secondary-button: {{ settings.colors_dark_button_secondary.red }}, {{ settings.colors_dark_button_secondary.green }}, {{ settings.colors_dark_button_secondary.blue }};
      --colors-line-secondary-button: {{ settings.colors_dark_button_secondary.red }}, {{ settings.colors_dark_button_secondary.green }}, {{ settings.colors_dark_button_secondary.blue }};
    {% endif %}
    {% if section.settings.secondary_button_dark.alpha != 0.0 %}
      --background-secondary-button: {{ section.settings.secondary_button_dark.red }}, {{ section.settings.secondary_button_dark.green }}, {{ section.settings.secondary_button_dark.blue }};
      --colors-line-secondary-button: {{ section.settings.secondary_button_dark.red }}, {{ section.settings.secondary_button_dark.green }}, {{ section.settings.secondary_button_dark.blue }};
    {% elsif settings.background_dark_button_secondary.alpha != 0.0 and section.settings.secondary_button_text_dark.alpha == 0.0  %}  
      --background-secondary-button: {{ settings.background_dark_button_secondary.red }}, {{ settings.background_dark_button_secondary.green }}, {{ settings.background_dark_button_secondary.blue }};
      --colors-line-secondary-button: {{ settings.background_dark_button_secondary.red }}, {{ settings.background_dark_button_secondary.green }}, {{ settings.background_dark_button_secondary.blue }};
    {% else %}
      --background-secondary-button: transparent;
    {% endif %}
    {% if section.settings.colors_text_link_dark.alpha != 0.0 %}
      --colors-text-link: {{ section.settings.colors_text_link_dark.red }}, {{ section.settings.colors_text_link_dark.green }}, {{ section.settings.colors_text_link_dark.blue }};
    {% else %}
      --colors-text-link: {{ settings.colors_dark_text_link.red }}, {{ settings.colors_dark_text_link.green }}, {{ settings.colors_dark_text_link.blue }};
    {% endif %}
  }
  .instagram-social-background{
    padding: 3px;
    background-image: linear-gradient(to left bottom, #7638FA 15.76%, #D300C5 34.61%, #FF0069 51.89%, #FF7A00 64.77%, #FFD600 81.1%);
  }
  .pinterest-social-background {
    padding: 3px;
    background-image: linear-gradient(to left bottom, #E60023 30%, #ffffff 90%);
  }
  .facebook-social-background {
    padding: 3px;
    background-image: linear-gradient(to left bottom, #1877f2 25%, #F0F2F5 50%, #ffffff 90%);
  }
  .twitter-social-background {
    padding: 3px;
    background-image: linear-gradient(to left bottom, #000000 10%, #ffffff 50%, #1d9bf0 90%);
  }
  .tiktok-social-background {
    padding: 3px;
    background-image: linear-gradient(to left bottom, #ff0050 20%, #00f2ea 50%, #000000 85%);
  }
{%- endstyle -%}

{% render 'section-divider' %}

<div class="section--{{ section.id }} pt-[{{ section.settings.padding_top_mobile }}px] md:pt-[{{ section.settings.padding_top }}px] pb-[{{ section.settings.padding_bottom_mobile }}px] md:pb-[{{ section.settings.padding_bottom }}px]">
  <div 
    x-data="{
      openPopup: false,
      goToActivePopupSlide (index) {
        this.openPopup = true
        const splideEl = $el.querySelector('#x-popup-slideshow-{{ section.id }}');       
        if (splideEl){          
          if (splideEl.splide){
            this.$nextTick(() => splideEl.splide.go(index));             
          } else {
            document.addEventListener(`eurus:{{ section.id }}:splide-ready`, () => {
              splideEl.splide.go(index);
            });
          }         
        }
      }
    }" 
    class="mx-auto{% if section.settings.full_width %}{% if section.settings.padding_full_width %} md:pl-5 md:pr-5{% else %} md:pl-0 md:pr-0{% endif %}{% else %} x-pgw page-width{% endif %}{% if section.settings.full_width_mobile %} full-width-mobile{% else %} pl-5 pr-5{% endif %}"
  >
    <div class="flex ltr w-full {% if section.settings.heading_alignment == "right" %} flex-row-reverse{% endif %}{% if section.settings.heading_alignment == "center" %} flex-col items-center{% else %} justify-between items-end{% endif %}">
      {% if section.settings.heading != blank or section.settings.text != blank or section.settings.subheading != blank %}
        <div class="text-{{ section.settings.heading_alignment }} flex flex-col ltr {% if section.settings.heading_alignment == "right" %}lg:flex-row-reverse {% elsif section.settings.heading_alignment == "left" %}lg:flex-row{% endif %}{% if section.settings.heading_alignment == "center" %} lg:flex-col items-center{% else %} justify-between items-end{% endif %} w-full">
          <div class="w-full {% if section.settings.heading_alignment == "center" %}lg:w-full{% else %}lg:w-[70%]{% endif %} {% if section.settings.heading_alignment == "right" %}self-end{% elsif section.settings.heading_alignment == "left" %}self-start{% else %}self-center{% endif %}">
            {%- if section.settings.subheading != blank -%}
              <div class="mb-2{% unless settings.disable_heading_animation %} overflow-hidden{% endunless %}"{% unless settings.disable_heading_animation %} x-intersect.once="$el.querySelector('.anm-move-up')?.classList.add('active-anm-heading')"{% endunless %}>
                <p class="subheading rte color-text--{{ section.id }}{% unless settings.disable_heading_animation %} anm-move-up{% endunless %}">{{ section.settings.subheading }}</p>
              </div>
            {% endif %}
            {%- if section.settings.heading != blank -%}
              {%- liquid 
                assign heading_size = settings.heading_base_size | times: section.settings.heading_size | times: 0.000225
              -%}
              {%- style -%} 
                .heading-{{ section.id }} {
                  font-size: {{ heading_size | times: 0.6 }}rem; 
                }
                @media (min-width: 767px){
                  .heading-{{ section.id }} {
                    font-size: {{ heading_size }}rem; 
                  }
                }
              {%- endstyle -%}
              <div class="heading-{{ section.id }} p-break-words">
                {% render 'heading-highlight',
                  headingId: section.id,
                  heading: section.settings.heading,
                  highlight_type: section.settings.highlight_type,
                  color_heading_highlight_dark: section.settings.color_heading_highlight_dark,
                  color_heading_highlight_light: section.settings.color_heading_highlight_light,
                  animation_heading: true,
                  heading_tag: section.settings.heading_tag
                %}
              </div>
            {%- endif -%}
            {% if section.settings.text != blank %}
              <div class="rte text-[rgb(var(--colors-text))] w-full">
                {{ section.settings.text }}
              </div>
            {% endif %}
          </div>
          {%- if section.settings.button_label != blank -%}
            <div class="flex-1 w-full lg:w-fit">           
              {% if section.settings.button_label != blank %}
                <div 
                  class="mt-2 lg:mt-4 p-break-words button-{{ section.id }} flex-1 w-full text-{{ section.settings.heading_alignment }} {% if section.settings.heading_alignment == "right" %}lg:text-left lg:mt-0{% elsif section.settings.heading_alignment == "left" %}lg:text-right lg:mt-0{% else %}lg:text-center lg:mt-6{% endif %}" 
                >
                  <a
                    {% if section.settings.button_link %} href="{{ section.settings.button_link }}"{% if section.settings.open_new_window_button %} target="_blank"{% endif %}{% else %} role="link" aria-disabled="true"{% endif %}
                    class="button button--{{ section.id }} py-2.5 px-7 md:px-8 md:py-4{% if section.settings.show_button_style == 'secondary' %} button-outline{% elsif section.settings.show_button_style == 'text-link' %} button-text-link {% else %} button-solid{% endif %} text-center inline-block border empty:hidden leading-normal{% unless section.settings.button_link %} hover:cursor-not-allowed opacity-70{% endunless %}"
                  >
                    {% render 'button-label', button_label: section.settings.button_label, show_button_style: section.settings.show_button_style, is_social_feeds: true, button_text_class: 'flex gap-3' %}             
                  </a>
                </div>
              {% endif %}
            </div>         
          {% endif %}
        </div> 
      {% endif %}     
    </div>
    <div
      class="social-feeds-splide x-splide splide overflow-hidden relative visible mt-9"
      {% if swiper_on_mobile or enable_desktop_slider %}
        id="x-slide-social-feeds-{{ section.id }}"       
        x-intersect.once.margin.200px='$store.xSplide.load($el, {
          "speed": 1000,
          "updateOnMove": "true",
          "pagination": false,    
          "mediaQuery": "min",
          "progressBar": {{ section.blocks.size }},
          {% if arrow_swipe_mobile -%}
            "drag": false,
          {%- endif %}
          {% if settings.lang_direction contains request.locale.iso_code -%} 
            "direction": "rtl",
          {%- endif %}
          {%- if section.settings.change_slides_speed > 0 -%}
            "autoplay": true,
            "interval": {{ section.settings.change_slides_speed | times: 1000 }},
          {%- endif -%}
          "breakpoints": {
            300: {
              {% if swiper_on_mobile == false -%}
                "destroy": true,
              {%- endif %}
              "gap": "{{ section.settings.spacing_mobile }}px",
              "perPage": {{ columns_mobile }},
              "perMove": 1
            },
            768: {
              {% if enable_desktop_slider -%}
                "destroy": false,
              {% else -%}
                "destroy": true,
              {%- endif %}
              "gap": "{{ section.settings.spacing }}px",
              "perPage": 4,
              "perMove": 1
            },
            1024: {
              "perPage": {{ section.settings.columns_desktop }},
              "perMove": {{ section.settings.columns_desktop }}
            }
          },  
          "classes": {
            "arrows" : "block"
          }         
        })'
      {% endif %}
    >
      <div class="splide__track">
        <div class="splide__list splide__list flex{% unless swiper_on_mobile %} spacing-mobile-{{ section.id }} flex-wrap justify-start{% endunless %}{% if enable_desktop_slider %} md:gap-0 md:flex-nowrap md:justify-start{% else %} md:flex-wrap md:justify-start{% endif %} spacing--desktop-{{ section.id }} spacing--tablet-{{ section.id }} text-center items-center">
          {% for block in section.blocks %}
            {% liquid 
              assign video_type = false

              if block.settings.social_post_video != null 
                assign video_type = 'video_select'
              endif

              assign media_ratio = 'image-natural-height-' | append: block.id
              if section.settings.media_ratio != 'natural'
                assign media_ratio = section.settings.media_ratio
              endif
            %}
            {% if block.settings.social_post_image != blank and video_type == false %}
              {% if section.settings.media_ratio == 'natural' %}
                {% style %} 
                  .image-natural-height-{{ block.id }} {
                    padding-bottom: {{ 1 | divided_by: block.settings.social_post_image.aspect_ratio | times: 100 }}%;
                  }
                {% endstyle %}
              {% endif %}
            {% elsif video_type %}
              {% if section.settings.media_ratio == 'natural' %}
                {% style %} 
                  .image-natural-height-{{ block.id }} {
                    padding-bottom: {{ 1 | divided_by: block.settings.social_post_video.aspect_ratio | times: 100 }}%;
                  }
                {% endstyle %}
              {% endif %}
            {% endif %}
            <div      
              x-slide-index="{{ forloop.index | minus: 1 }}"       
              x-intersect.once.margin.-20px.0px.-20px.0px="$el.querySelector('.animate_transition_card__image')?.classList.add('active')"
              @click="goToActivePopupSlide({{ forloop.index | minus: 1 }}); document.body.classList.add('overflow-hidden')"
              class="x-block-items-{{ block.type }}-{{ forloop.index }} cursor-pointer media-{{ block.id }} flex group overflow-hidden relative 
              {%- if enable_desktop_slider or swiper_on_mobile %} splide__slide x-splide-slide{% endif -%}
              {%- if swiper_on_mobile %} preload-slide--{{ section.id }}-mobile{% else %}{% if section.settings.columns_mobile == "1" %} w-full{% elsif section.settings.columns_mobile == "2" %} mobile-column-2-{{ section.id }}{% else %} w-fit{% endif %}{% endif -%}
              {%- if enable_desktop_slider %} preload-slide--{{ section.id }} md:w-auto{% else %} preload-slide--{{ section.id }}{% endif %}" 
              {{ block.shopify_attributes }}           
            >
              <div class="flex {% if block.settings.social_post_image == blank and video_type == false and section.settings.media_ratio == 'natural' %}pb-[100%]{% else %}{{ media_ratio }}{% endif %} grow relative h-full w-full z-10 overflow-hidden{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}">
                <div class="{% if block.settings.social_post_image != blank or video_type %}animate_transition_card__image animate-Xpulse skeleton-image{% endif %} flex absolute top-0 left-0 h-full w-full disable-effect overflow-hidden">
                  {%- capture sizes -%}
                    (min-width: 768px) 60vw, 100vw
                  {%- endcapture -%}
                  {%- capture onload -%}
                    this?.classList.add("active"); 
                    this.closest(".animate_transition_card__image")?.classList.remove("animate-Xpulse", "skeleton-image");
                    setTimeout(() => { this.closest(".animate_transition_card__image")?.classList.add("lazy_active", "active"); }, 250);
                  {%- endcapture -%}
                  {%- if block.settings.social_post_image != blank and video_type == false -%}
                    {{ block.settings.social_post_image | image_url: width: 3840 | image_tag: 
                      loading: loading, 
                      sizes: sizes, 
                      widths: '375, 450, 750, 900, 1100, 1500, 1780, 2000, 3000, 3840', 
                      class: 'w-full object-cover z-0 h-full image-hover absolute top-0 left-0 block animate_transition_image', 
                      style: '',
                      onload: onload
                    }}
                  {%- elsif video_type -%}
                    <div x-intersect="$nextTick(() => { $store.xVideo.load($el) })" 
                      class="absolute top-0 left-0 w-full h-full flex items-center animate_transition_image{% if block.settings.image_mobile != blank %} hidden md:block{% endif %}"> 
                      <div class="relative external-video h-full w-full rounded-none overflow-hidden{% if block.settings.enable_video_autoplay %} video-hero{% endif %}" 
                        x-intersect:leave="$store.xVideo.pause($el)"
                        {% if block.settings.enable_video_autoplay %}
                          x-intersect="$store.xVideo.play($el)"
                        {% endif %}
                      >
                        {%- render 'media-video',
                          enable_video_autoplay: block.settings.enable_video_autoplay,
                          video_type: video_type,
                          video: block.settings.social_post_video,
                          cover_image: block.settings.social_post_image,
                          is_social_feeds: true,
                          columns_desktop: section.settings.columns_desktop,
                          columns_mobile: columns_mobile,
                          show_sound_control: block.settings.show_sound_control
                        -%}
                      </div>
                    </div>
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'bg-[#c9c9c9] text-[#acacac] block absolute top-0 left-0 w-full h-full object-cover' }}
                  {%- endif -%}               
                </div>   
                {% if block.settings.integrated_social_media != "none" %}
                  {% liquid
                    if block.settings.integrated_social_media == 'adapt'
                      assign block_social_icon = 'icon-' | append: section.settings.integrated_social_media
                    else
                      assign block_social_icon = 'icon-' | append: block.settings.integrated_social_media
                    endif
                  %}                
                {% endif %}
                <div class="absolute lg:max-w-[48px] lg:w-1/5 top-3 right-3 translate-x-0 lg:translate-x-full lg:right-0 group-hover:lg:right-3 group-hover:lg:translate-x-0 transition-all duration-500 flex flex-col gap-2">
