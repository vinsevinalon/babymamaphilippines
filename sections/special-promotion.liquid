        {
          "value": "stack",
          "label": "Stacked (1 Column)"
        }
      ],
      "default": "2col"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 40,
      "step": 5,
      "unit": "px",
      "label": "Gap Between Promotions",
      "default": 20
