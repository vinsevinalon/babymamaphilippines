    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Border Radius",
      "default": 8,
      "info": "Rounded corners"
    },
    {
      "type": "checkbox",
      "id": "shadow_enable",
      "label": "Enable Shadow",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "hover_effect",
      "label": "Enable Hover Effects",
