{% comment %}
  Special Promotions Section
  - Displays up to 3 promotional banners
  - Each promotion can link to a specific page
  - Fully responsive with optimized layouts for all devices
  - Includes hover effects and optional text overlays
{% endcomment %}

<div class="special-promotions-section section-{{ section.id }}" id="SpecialPromotions-{{ section.id }}">
  <div class="promotions-container">
    {% if section.settings.heading != blank %}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.heading | escape }}</h2>
        {% if section.settings.subheading != blank %}
          <div class="section-subtitle">{{ section.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="promotions-grid" style="--gap: {{ section.settings.grid_gap }}px;">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <div class="promotion-item" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link | default: '#' }}" class="promotion-link">
              <div class="promotion-image-container">
                {{
                  block.settings.image
                  | image_url: width: 1200
                  | image_tag:
                    loading: 'lazy',
                    class: 'promotion-image',
                    sizes: '(min-width: 990px) 33vw, (min-width: 750px) 50vw, 100vw',
                    widths: '550, 720, 990, 1200',
                    height: block.settings.image.height,
                    width: block.settings.image.width,
                    alt: block.settings.title
                  | escape
                }}

                {% if block.settings.apply_overlay %}
                  <div
                    class="promotion-overlay"
                    style="background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity }})"
                  ></div>
                {% endif %}

                {% if block.settings.title != blank
                  or block.settings.text != blank
                  or block.settings.button_label != blank
                %}
                  <div class="promotion-content" style="text-align: {{ block.settings.text_alignment }};">
                    {% if block.settings.title != blank %}
                      <h3 class="promotion-title" style="color: {{ block.settings.text_color }};">
                        {{ block.settings.title | escape }}
                      </h3>
                    {% endif %}

                    {% if block.settings.text != blank %}
                      <div class="promotion-text" style="color: {{ block.settings.text_color }};">
                        {{ block.settings.text }}
                      </div>
                    {% endif %}

                    {% if block.settings.button_label != blank %}
                      <div class="promotion-button-wrapper">
                        <span
                          class="promotion-button"
                          style="background-color: {{ block.settings.button_color }}; color: {{ block.settings.button_text_color }};"
                        >
                          {{ block.settings.button_label | escape }}
                        </span>
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </a>
          </div>
        {% else %}
          <div class="promotion-item placeholder" {{ block.shopify_attributes }}>
            <div class="placeholder-content">
              {% if block.settings.title != blank %}
                <h3 class="placeholder-title">{{ block.settings.title }}</h3>
              {% else %}
                <h3 class="placeholder-title">Promotion Title</h3>
              {% endif %}
              <p class="placeholder-text">Add an image to display your promotion</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}

      {% if section.blocks.size == 0 %}
        <div class="placeholder-container">
          <div class="placeholder-content">
            <p>Add promotional blocks to showcase special offers.</p>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% style %}
  .special-promotions-section {
    margin: {{ section.settings.margin_top }}px 0 {{ section.settings.margin_bottom }}px;
  }

  .promotions-container {
    max-width: {{ section.settings.section_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .section-title {
    margin: 0 0 10px;
    font-size: 28px;
    font-weight: 600;
  }

  .section-subtitle {
    font-size: 16px;
    opacity: 0.85;
  }

  .promotions-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.layout }}, 1fr);
    gap: var(--gap);
  }

  .promotion-item {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
    box-shadow: {{ section.settings.shadow_enable | default: false | ternary: '0 4px 12px rgba(0,0,0,0.1)', 'none' }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  {% if section.settings.hover_effect %}
  .promotion-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
  }

  .promotion-item:hover .promotion-image {
    transform: scale(1.05);
  }
  {% endif %}

  .promotion-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .promotion-image-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .promotion-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  .promotion-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transition: background-color 0.3s ease;
  }

  .promotion-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 20px;
    z-index: 1;
  }

  .promotion-title {
    margin: 0 0 10px;
    font-size: 22px;
    font-weight: 600;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }

  .promotion-text {
    margin-bottom: 15px;
    font-size: 16px;
    line-height: 1.4;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }

  .promotion-button-wrapper {
    margin-top: 10px;
  }

  .promotion-button {
    display: inline-block;
    padding: 8px 20px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 500;
    transition: background-color 0.3s ease, opacity 0.3s;
  }

  .promotion-button:hover {
    opacity: 0.9;
  }

  .placeholder-content,
  .placeholder-container {
    height: 100%;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #f6f6f6;
    padding: 20px;
    text-align: center;
    border-radius: {{ section.settings.border_radius }}px;
  }

  .placeholder-title {
    margin: 0 0 10px;
  }

  .placeholder-text {
    color: #777;
  }

  /* Responsive styles */
  @media screen and (max-width: 989px) {
    .section-title {
      font-size: 24px;
    }

    .promotion-title {
      font-size: 20px;
    }

    .promotion-text {
      font-size: 14px;
    }

    /* For tablet, we adjust based on layout preference */
    {% if section.settings.tablet_layout == "stack" %}
    .promotions-grid {
      grid-template-columns: 1fr;
    }
    {% elsif section.settings.tablet_layout == "2col" %}
    .promotions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .section-title {
      font-size: 22px;
    }

    .promotions-container {
      padding: 0 15px;
    }

    .promotions-grid {
      grid-template-columns: 1fr;
    }

    .promotion-title {
      font-size: 18px;
    }
  }
{% endstyle %}

{% schema %}
