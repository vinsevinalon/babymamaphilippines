      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom Margin",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "promotion",
      "name": "Promotion",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Promotion Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Special Offer"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add promotional text to encourage customer action</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "header",
          "content": "Content Styling"
        },
        {
          "type": "checkbox",
          "id": "apply_overlay",
          "label": "Apply Overlay",
