                    {% render 'icon-labels-bags', icon: 'chevron-right' %}
                </div>
              </div>
              <div tabindex="-1" class="overflow-y-auto scrollbar-body pl-4 pr-4">
                {% render 'card-product-video-shopping',
                  card_product: card_product,
                  block: block,
                  index: index,
                  type: 'product',
                  section: section,
                  video_looping: true
                %}
              </div>
            </div>
          </div>
        {% endif %}
        <div class="pt-4 pb-4 flex flex-col hover:cursor-default card-product-videolooping recommendations {% if type == 'card' %}bg-card-product-videolooping-{{ section.id }}{% endif %}
          {%- if settings.edges_type == 'rounded_corners' %} rounded-2xl{% endif -%}
          {%- if is_bottom %} card-product h-full border border-solid pl-4 pr-4
            {%- elsif is_bottom == false %} pl-4 pr-4
            {%- elsif type == 'item' %} card-product border border-solid pl-2.5 pr-2.5 pt-2.5 pb-2.5
            {%- else %} pt-2.5 pb-0 card-product
          {%- endif -%}"
        >
