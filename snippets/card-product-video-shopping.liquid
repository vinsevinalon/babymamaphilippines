                  card_product: card_product,
                  block: block,
                  index: index,
                  type: 'product_in_popup',
                  section: section,
                  video_looping: true
                %}
              </div>
            </div>
          </template>
        </div>
      </div>
    {% endif %}
  {% endif %}
