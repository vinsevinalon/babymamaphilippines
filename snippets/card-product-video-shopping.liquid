{% comment %}
  Renders a product card video shopping

  Accepts:
  - card_product: {Object} Product Liquid object (optional).
  - next_action_show_product: {Boolean} Show product after click card
  - index: {Number} index of product
  - block: {Object} block to wich this snippet belongs.
  - section: {Object} section to which this snippet belongs.
  - type: {String} type of snippet (card/product/product_in_popup/item/item_in_slide).
  Usage:
  {% render 'card-product-video-shopping' %}
{% endcomment %}
{%- liquid
  assign choose_option_id = card_product.id | append: block.id | append: index
  assign section_id = section.id | append: choose_option_id

  if type == 'card'
    if section.settings.product_card_position == 'on' and section.settings.video_layout == 'aspect-[9/16]'
      assign is_bottom = false
    else 
      assign is_bottom = true
    endif
  endif
-%}
{% style %}
{% endstyle %}
{% if is_bottom == false and block.settings.enable_video_autoplay == false %}
  <template x-teleport="#video--{{ block.id }}">
    {% if type != 'product' and type != 'product_in_popup' %}
      <div
        {{ block.shopify_attributes }}
        {% if type == 'card' %}
          {% if block.settings.image == blank or next_action_show_product %}
            @click="showSlideListItemInVideoCard = true"
          {% else %}
            @click="openPopup()"
          {% endif %}
        {% elsif type == 'item' %}
          @click="openProductInPopup('{{ card_product.id | append: '_' | append: index }}')"
        {% elsif type == 'item_in_slide' %}
          @click="openProductInSlide('{{ card_product.id | append: '_' | append: index }}')"
        {% else %}
          @click="openPopup()"
        {% endif %}
        class="absolute top-2 z-10 hover:cursor-pointer left-2 rtl:left-0 rtl:right-2 pl-2.5 pr-2.5 pt-2.5 pb-2.5 w-[34px] h-[34px] text-[rgb(var(--colors-button-text))] bg-[rgba(var(--colors-button))]{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}"
      >
        {% if type == 'card' %}
          {% render 'icon-alls', icon: 'icon-search-quickview' %}
        {% else %}
          {% render 'icon-alls', icon: 'icon-plus' %}
        {% endif %}
      </div>
    {% endif %}
  </template>
{% else %}
  <div
    class="card-product{% if type == 'product_in_popup' %} pl-2 pr-2{% endif %}{% if is_bottom %} h-full{% elsif is_bottom == false %}{% if section.settings.video_items_view == "focus" %} mb-2 mr-2 ml-2 {% endif %} absolute bottom-0 left-0 right-0 z-10{% endif %}{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %} card-bg-{{ section.id }}" {{ block.shopify_attributes }}
    id="x-product-template-{{ product.id }}-{{ section_id }}"
    x-data="xVariantSelect($el,'{{ section.id }}', false, '{{ card_product.unavailable | t }}', '{{ card_product.url }}', '{{ card_product.id }}', false, true, false, '', '', '{{ paginate.current_page }}', '{{ card_product.featured_media | image_url | default: "" }}')"
    data-url="{{ product.url }}"
  >
    {% if card_product != blank %}
      {% if type == 'item_in_slide' %}
        <div x-init="document.querySelector('#card-video-shopping-{{ block.id }}').appendChild($el)">
          <div
            x-cloak 
            :class="showSlideProductInVideoCard && productSelectedId === '{{ card_product.id | append: '_' | append: index }}' ? 'transform translate-y-0 transition-transform duration-500 ease-in-out' : 'transform translate-y-full transition-transform duration-500 ease-in-out'" 
            class="bg-card-product pt-4 pb-4 overflow-hidden bg-[rgba(var(--background-color))] flex flex-col hover:cursor-default absolute top-0 bottom-0 left-0 right-0 border z-20 h-full{% if settings.edges_type == 'rounded_corners' %}{% if section.settings.full_width_mobile %}{% if swiper_on_mobile %} rounded-[10px]{% else %} md:rounded-[10px]{% endif %}{% else %} rounded-[10px]{% endif %}{% endif %}"
          >
            <div class="flex justify-end pb-2.5 pl-4 pr-4">
              <div
                @click="showSlideProductInVideoCard = false"
                class="hover:cursor-pointer rotate-90 pl-2.5 pr-2.5 pt-2.5 pb-2.5 w-[34px] h-[34px] border{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}">
                  {% render 'icon-labels-bags', icon: 'chevron-right' %}
              </div>
            </div>
            <div class="overflow-y-auto scrollbar-body pl-4 pr-4">
              {% render 'card-product-video-shopping',
                card_product: card_product,
                block: block,
                index: index,
                type: 'product',
                section: section
              %}
            </div>
          </div>
        </div>
      {% endif %}
      <div class="pt-4 pb-4 flex flex-col hover:cursor-default
        {%- if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif -%}
        {%- if is_bottom %} card-product h-full border border-solid pl-4 pr-4
          {%- elsif is_bottom == false %} pl-4 pr-4
          {%- elsif type == 'item' %} card-product border border-solid pl-2.5 pr-2.5 pt-2.5 pb-2.5
          {%- else %} pt-2.5 pb-0
        {%- endif -%}"
      >
        <div class="flex{% if type != 'product_in_popup' %} flex-row{% else %} flex-col{% endif %}">
          <div class="product-image{% if type == 'product' %} w-24{% elsif type == 'product_in_popup' %} w-full{% else %} w-16{% endif %}">
            {%- if card_product.featured_media -%}
              {%- capture sizes -%}
                (min-width: 1024px) calc(44vw + 30px),
                (min-width: 768px) calc(80vw + 30px),
                100vw
              {%- endcapture -%}
              <span
                class="relative{% if type != "product" and type != "product_in_popup" %} cursor-pointer{% endif %}"
                {% if type == 'card' %}
                  {% if block.settings.image == blank or next_action_show_product %}
                    @click="showSlideListItemInVideoCard = true"
                  {% else %}
                    @click="openPopup()"
                  {% endif %}
                {% elsif type == 'item' %}
                  @click="openProductInPopup('{{ card_product.id | append: '_' | append: index }}')"
                {% elsif type == 'item_in_slide' %}
                  @click="openProductInSlide('{{ card_product.id | append: '_' | append: index }}')"
                {% elsif type != "product" and type != "product_in_popup" %}
                  @click="openPopup()"
                {% endif %}
              >
                <img
                  srcset="{{ card_product.featured_media | image_url: width: 375 }} 375w,
                  {{ card_product.featured_media | image_url: width: 450 }} 450w,
                  {{ card_product.featured_media | image_url: width: 750 }} 750w,
                  {{ card_product.featured_media | image_url: width: 900 }} 900w,
                  {{ card_product.featured_media | image_url: width: 1100 }} 1100w,
                  {{ card_product.featured_media | image_url: width: 1500 }} 1500w,
                  {{ card_product.featured_media | image_url: width: 1780 }} 1780w"
                  class="preview-img object-cover w-full aspect-square animate-Xpulse skeleton-image{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}"
                  src="{{ card_product.featured_media | image_url: width: 1780 }}"
                  width="{{ card_product.featured_media.width }}"
                  size="{{ sizes }}"
                  height="{{ card_product.featured_media.height }}"
                  alt="{{ card_product.featured_media.alt | escape }}"
                  loading="lazy"
                  onload="this.closest('.skeleton-image')?.classList.remove('animate-Xpulse', 'skeleton-image');"
                />
              </span>
            {%- else -%} 
              <div class='bg-[#c9c9c9] flex justify-center w-full items-center aspect-square{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}'>
                {%- render 'icon-placeholder', icon: 'icon-product', class: 'w-full h-full' %}
              </div>
            {%- endif -%}
          </div>
          <div class="{% if type != 'product_in_popup' %}ml-3 rtl:mr-3 rtl:ml-0{% endif %} flex flex-row flex-1" {{ block.shopify_attributes }}>
            <div class="flex-1{% if type == 'product_in_popup' %} pt-2.5{% endif %}" {{ block.shopify_attributes }}>
              <div class="mb-3 leading-tight">
                <h3 class="card__heading h5 product-card-heading p-break-words text-[{{ settings.text_base_size | times: 0.007875 }}rem] md:text-[{{ settings.text_base_size | times: 0.00875 }}rem]">
                  <span
                    class="x-card-title full-unstyled-link product-name text-[rgba(var(--colors-heading))]{% if type != "product" and type != "product_in_popup" %} hover:text-[rgba(var(--colors-text-link))] cursor-pointer{% endif %} duration-200 p-break-words"
                    {% if type == 'card' %}
                      {% if block.settings.image == blank or next_action_show_product %}
                        @click="showSlideListItemInVideoCard = true"
                      {% else %}
                        @click="openPopup()"
                      {% endif %}
                    {% elsif type == 'item' %}
                      @click="openProductInPopup('{{ card_product.id | append: '_' | append: index }}')"
                    {% elsif type == 'item_in_slide' %}
                      @click="openProductInSlide('{{ card_product.id | append: '_' | append: index }}')"
                    {% elsif type != "product" and type != "product_in_popup" %}
                      @click="openPopup()"
                    {% endif %}
                  >
                    {{ card_product.title | escape }}
                  </span>
                </h3>
              </div>
              {%- liquid 
                assign use_variant = false
                if type == 'product' or type == 'product_in_popup'
                  assign use_variant = true
                endif
              -%}
              <div class="x-card-price mt-3 text-left rtl:text-right"
                {%- if type == 'product' %} id="price-{{ section_id }}" role="status"{% endif -%}
                {%- if type == 'product_in_popup' %} id="price-{{ section_id }}" role="status"{% endif -%}
              >
                {% render 'price', product: card_product, use_variant: use_variant %}
              </div>
              <div id="x-availability-notice-{{ section.id }}" class="mt-2.5 flex items-center mb-1 flex-wrap gap-1 justify-left rtl:flex-row-reverse md:rtl:list-layout:flex-row md:list-layout:justify-start" x-show="$store.xStoreSelector?.canShow('{{ card_product.id }}', [{{ card_product.collections | map: 'id' | join: ', ' }}])">
                {%- render 'availability-notice',
                  product: card_product
                -%}
              </div>
            </div>
            {% if type != 'product' and type != 'product_in_popup' %}
              <div
                {{ block.shopify_attributes }}
                {% if type == 'card' %}
                  {% if block.settings.image == blank or next_action_show_product %}
                    @click="showSlideListItemInVideoCard = true"
                  {% else %}
                    @click="openPopup()"
                  {% endif %}
                {% elsif type == 'item' %}
                  @click="openProductInPopup('{{ card_product.id | append: '_' | append: index }}')"
                {% elsif type == 'item_in_slide' %}
                  @click="openProductInSlide('{{ card_product.id | append: '_' | append: index }}')"
                {% else %}
                  @click="openPopup()"
                {% endif %}
                class="hover:cursor-pointer ml-5 rtl:ml-0 rtl:mr-5 pl-2.5 pr-2.5 pt-2.5 pb-2.5 w-[34px] h-[34px] text-[rgb(var(--colors-button-text))] bg-[rgba(var(--colors-button))]{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}"
              >
                {% if type == 'card' %}
                  {% render 'icon-alls', icon: 'icon-search-quickview' %}
                {% else %}
                  {% render 'icon-alls', icon: 'icon-plus' %}
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
        {% if type == 'product' %}
          {% render 'choose-option', section: section, product: card_product, index: index, block: block %}
        {%  elsif type == 'product_in_popup'  %}
          {% render 'choose-option', section: section , product: card_product, index: index, block: block, is_product_in_popup: true %}
        {% endif %}
      </div>
    {% else %}
      <div class="{% if is_bottom %}card-product border border-solid h-full pl-4 pr-4 pt-4 pb-4{% elsif type == 'item' %}pl-2.5 pr-2.5 pt-2.5 pb-2.5 card-product border border-solid{% else %}pl-4 pr-4 pt-4 pb-4{% endif %} flex flex-row{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}{% if show_border %} border border-solid{% endif %} hover:cursor-default" {{ block.shopify_attributes }}>
        <div class="product-image w-16">
          <div class='bg-[#c9c9c9] flex justify-center w-full items-center aspect-square{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}'>
            {%- render 'icon-placeholder', icon: 'icon-product', class: 'w-full h-full' %}
          </div>
        </div>
        <div class="ml-3 rtl:mr-3 rtl:ml-0 flex flex-row flex-1">
          <div>
            <h3 class="product-card-heading mb-3 p-break-words leading-tight text-[{{ settings.text_base_size | times: 0.007875 }}rem] md:text-[{{ settings.text_base_size | times: 0.00875 }}rem]">{{ 'onboarding.product_title' | t }}</h3>
            <div>{% render 'price' %}</div>
            <div id="x-availability-notice-{{ section.id }}" class="mt-2.5 flex items-center mb-1 flex-wrap gap-1" x-show="$store.xStoreSelector?.canShow('{{ card_product.id }}', [{{ card_product.collections | map: 'id' | join: ', ' }}])">
              {%- render 'availability-notice',
                product: card_product
              -%}
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
  {% if card_product != blank and type == "item" %}
    {% comment %} Slide product in popup tablet/laptop/desktop {% endcomment %}
    <template x-teleport="#popup-content-{{ block.id }}">
      <div
        x-cloak
        :class="{
          'transform -translate-y-0 transition-transform duration-500 ease-in-out': showSlideProductInPopup && productSelectedId === '{{ card_product.id | append: '_' | append: index }}',
          'transform translate-y-full transition-transform duration-500 ease-in-out': !(showSlideProductInPopup && productSelectedId === '{{ card_product.id | append: '_' | append: index }}'),
          'h-full': productSelectedId === '{{ card_product.id | append: '_' | append: index }}',
          'h-0': productSelectedId !== '{{ card_product.id | append: '_' | append: index }}'
        }"
        x-transition.duration.500ms
        class="bg-[rgba(var(--background-color))] flex flex-col hover:cursor-default absolute top-0 bottom-0 left-0 right-0 z-[60]{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}"
      >
        <template x-if="productSelectedId == '{{ card_product.id | append: '_' | append: index }}'">
          <div class="flex flex-col h-full">
            <div class="flex pb-2.5 pl-4 pr-4 md:pl-10 md:pr-10 justify-end">
              <div
                @click="closeProductInPopup()"
                class="hover:cursor-pointer rotate-90 pl-2.5 pr-2.5 pt-2.5 pb-2.5 w-[34px] h-[34px] border{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}">
                  {% render 'icon-labels-bags', icon: 'chevron-right' %}
              </div>
            </div>
            <div class="overflow-y-auto scrollbar-body pl-4 pr-4 md:pl-10 md:pr-10">
              {% render 'card-product-video-shopping',
                card_product: card_product,
                block: block,
                index: index,
                type: 'product_in_popup',
                section: section
              %}
            </div>
          </div>
        </template>
      </div>
    </template>
  {% endif %}
{% endif %}