{% comment %}
  Renders a product card video shopping

  Accepts:
  - card_product: {Object} Product Liquid object (optional).
  - next_action_show_product: {Boolean} Show product after click card
  - index: {Number} index of product
  - block: {Object} block to wich this snippet belongs.
  - section: {Object} section to which this snippet belongs.
  - type: {String} type of snippet (card/product/product_in_popup/item/item_in_slide).
  Usage:
  {% render 'card-product-video-shopping' %}
{% endcomment %}
{%- liquid
  assign choose_option_id = card_product.id | append: index
  assign section_id = 'choose-option' | append: choose_option_id
  
  if type == 'card'
    if section.settings.product_card_position == 'on' and section.settings.video_layout == 'aspect-[9/16]'
      assign is_bottom = false
    else 
      assign is_bottom = true
    endif

    if video_looping 
      if section.settings.product_card_position == 'on'
        assign is_bottom = false
      else
        assign is_bottom = true
      endif
    endif
  endif
-%}
{% style %}
  {% unless is_bottom %}
    .card-video-shopping-{{ block.id }} > div:not(.product-list-container) > div:not(.product-slide) .card-product-info-container:not(.is-bottom), 
    .card-video-shopping-{{ block.id }} > div:not(.product-list-container) > div:not(.product-slide) .card-product-info-container:not(.is-bottom) .product-info-container {
      flex-wrap: nowrap;
    }
    .card-video-shopping-{{ block.id }} > div:not(.product-list-container) > div:not(.product-slide) .card-product-info-container:not(.is-bottom) .product-info-container .min-w-\[130px\] {
      min-width: unset;
    } 
    .card-video-shopping-{{ block.id }} > div:not(.product-list-container) > div:not(.product-slide) .card-product-info-container:not(.is-bottom) .product-info-container h3 {
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
    }
  {% endunless %}
{% endstyle %}
{% if video_looping %}
  {% if is_bottom == false and section.settings.auto_play == false %}
    <template x-teleport="#video--{{ block.id }}">
      {% if type != 'product' and type != 'product_in_popup' %}
        <div
          {{ block.shopify_attributes }}
          {% if type == 'card' %}
            {% if block.settings.image == blank or next_action_show_product %}
              @click="showSlideListItemInVideoCard = true"
            {% else %}
              @click="openPopup()"
            {% endif %}
          {% elsif type == 'item' %}
            @click="openProductInPopup('{{ card_product.id | append: '_' | append: index }}')"
          {% elsif type == 'item_in_slide' %}
            @click="openProductInSlide('{{ card_product.id | append: '_' | append: index }}')"
          {% else %}
            @click="openPopup()"
          {% endif %}
          class="absolute top-2 z-20 hover:cursor-pointer left-2 rtl:left-0 rtl:right-2 pl-2.5 pr-2.5 pt-2.5 pb-2.5 w-[34px] h-[34px] text-[rgb(var(--colors-button-text))] bg-[rgba(var(--colors-button))]{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}"
        >
          {% if type == 'card' %}
            {% render 'icon-alls', icon: 'icon-search-quickview' %}
          {% else %}
            {% render 'icon-alls', icon: 'icon-plus' %}
          {% endif %}
        </div>
      {% endif %}
    </template>
  {% else %}
    <div
      class="{% if type == 'product_in_popup' %} pl-2 pr-2{% endif %}{% if is_bottom %} h-fit card-product-videolooping {% elsif is_bottom == false %} pr-2 pl-2 pt-2 pb-2{% if section.settings.video_items_view == "focus" %} mb-2 mr-2 ml-2 {% endif %} absolute bottom-0 left-0 right-0 z-10{% endif %}{% if settings.edges_type == 'rounded_corners' %} rounded-2xl{% endif %} card-bg-{{ section.id }}" {{ block.shopify_attributes }}
      id="x-product-template-{{ product.id }}-{{ section_id }}"
      x-data="xVariantSelect($el,'{{ section.id }}', false, '{{ card_product.unavailable | t }}', '{{ card_product.url }}', '{{ card_product.id }}', false, true, false, '', '', '{{ paginate.current_page }}', '{{ card_product.featured_media | image_url | default: "" }}')"
      data-url="{{ product.url }}"
    >
      {% if card_product != blank %}
        {% if type == 'item_in_slide' %}
          <div x-init="$el.closest('.card-video-shopping-{{ block.id }}').appendChild($el)">
            <div
              x-cloak
              x-show="showSlideProductInVideoCard && productSelectedId === '{{ card_product.id | append: '_' | append: index }}'"
              x-transition:enter="transition-all ease-in-out duration-300"
              x-transition:enter-start=" transform translate-y-full"
              x-transition:enter-end="transform translate-y-0"
              x-transition:leave="transition-all ease-in-out duration-300"
              x-transition:leave-end="transform translate-y-full"
              
              class="recommendations product-slide card-product pt-4 pb-4 overflow-hidden bg-[rgba(var(--background-color))] flex flex-col hover:cursor-default absolute top-0 bottom-0 left-0 right-0 border z-20 h-full{% if settings.edges_type == 'rounded_corners' %} rounded-2xl{% endif %}"
