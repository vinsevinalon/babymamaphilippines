                        {% if block.settings.image == blank or next_action_show_product %}
                          @click="showSlideListItemInVideoCard = true"
                        {% else %}
                          @click="openPopup()"
                        {% endif %}
                      {% elsif type == 'item' %}
                        @click="openProductInPopup('{{ card_product.id | append: '_' | append: index }}')"
                      {% elsif type == 'item_in_slide' %}
                        @click="openProductInSlide('{{ card_product.id | append: '_' | append: index }}')"
                      {% elsif type != "product" and type != "product_in_popup" %}
                        @click="openPopup()"
                      {% endif %}
                    >
                      {{ card_product.title | escape }}
                    </span>
                  </h3>
                </div>
                {%- liquid 
                  assign use_variant = false
                  if type == 'product' or type == 'product_in_popup'
                    assign use_variant = true
                  endif
                -%}
                <div class="{% if layout_card != 'row' %}x-card-price {% endif %}mt-3 text-left rtl:text-right"
                  {%- if type == 'product' %} id="price-{{ section_id }}" role="status"{% endif -%}
                  {%- if type == 'product_in_popup' %} id="price-{{ section_id }}" role="status"{% endif -%}
                >
                  {% render 'price', product: card_product, use_variant: use_variant %}
                </div>
              </div>
              {% if type != 'product' and type != 'product_in_popup' %}
                <div
                  {{ block.shopify_attributes }}
                  {% if type == 'card' %}
                    {% if block.settings.image == blank or next_action_show_product %}
                      @click="showSlideListItemInVideoCard = true; pauseVideo()"
                    {% else %}
                      @click="openPopup(); pauseVideo()"
                    {% endif %}
                  {% elsif type == 'item' %}
                    @click="openProductInPopup('{{ card_product.id | append: '_' | append: index }}')"
                  {% elsif type == 'item_in_slide' %}
                    @click="openProductInSlide('{{ card_product.id | append: '_' | append: index }}')"
                  {% else %}
                    @click="openPopup()"
                  {% endif %}
