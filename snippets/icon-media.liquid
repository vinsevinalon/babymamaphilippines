{% liquid
  assign list_new_media_icons = "||icon-youtube||icon-twitter||icon-tiktok||icon-instagram||icon-facebook||icon-pinterest||icon-play||icon-mute||icon-unmute||"
  assign item = '||' | append: icon | append: '||'

  if settings.icon_options == "modern"
    if list_new_media_icons contains item
      render 'icon-media-new', icon: icon, class: class, animation_class: animation_class
    else
      render 'icon-media-old', icon: icon, class: class, animation_class: animation_class
    endif
  else
    render 'icon-media-old', icon: icon, class: class, animation_class: animation_class
  endif
%}
