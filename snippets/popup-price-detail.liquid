{% if settings.enable_price_range and settings.price_popup != blank %}
<div
  id="PopupPriceDetail"
  x-show="$store.xPopupPriceDetail.open"
  x-cloak
  class="w-full h-full fixed top-0 left-0 z-[60] bg-[#acacac] bg-opacity-30"
>
  <div
    x-show="$store.xPopupPriceDetail.open"
    @click.away="$store.xPopupPriceDetail.open = false; $store.xPopup.close()"
    class="bg-[rgba(var(--background-color))] pl-5 pt-10 pb-10 md:pt-16 md:pb-16 md:pl-16 pr-0 md:pr-0 rtl:pr-5 rtl:md:pr-16 rtl:pl-0 relative min-h-[calc(75vh-80px)] md:min-h-[400px] max-w-3xl md:ml-auto md:mr-auto mt-[25vh] md:mt-[9vh]{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}"
    x-transition:enter="transition-all ease-in-out duration-500"
    x-transition:enter-start="opacity-0 transform translate-y-1/3"
    x-transition:enter-end="opacity-100 transform translate-y-0"
    x-transition:leave="transition-all ease-in-out duration-500"
    x-transition:leave-end="opacity-0 transform translate-y-1/3"
    x-intersect.full="$store.xModal.focus('PopupPriceDetail', 'ClosePriceDetail')"
    @keyup.escape="$store.xModal.removeFocus(); $store.xPopupPriceDetail.open = false; $store.xPopup.close()"
  >
    <button
      id="ClosePriceDetail"
      @click.prevent="$store.xModal.removeFocus(); $store.xPopupPriceDetail.open = false; $store.xPopup.close();"
      class="cursor-pointer top-0.5 md:top-6 absolute right-3 md:right-7 rtl:right-auto rtl:left-5 rtl:md:left-7 h-10 w-12 z-10 pt-3 pb-3.5 pl-4 pr-4"
    >
      {%- render 'icon-alls', icon: 'icon-close' -%}
    </button>
    <div class="overflow-y-auto scrollbar-body max-h-[65vh] min-h-[inherit]">
      <div id="popup-price-content" class="pr-5 md:pr-16 rtl:pl-5 rtl:pr-0 rtl:md:pl-16 rte">
        {{ settings.price_popup.content }}
      </div>
    </div>
  </div>
</div>
{% endif %}